{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "msg_type",
      "echo_req"
   ],
   "title" : null,
   "additionalProperties" : null,
   "type" : "object",
   "description" : null,
   "properties" : {
      "msg_type" : {
         "type" : "string",
         "pattern" : "^authorize$"
      },
      "echo_req" : {},
      "authorize" : {
         "type" : "object",
         "properties" : {
            "email" : {
               "pattern" : "^[_2]$",
               "type" : "string"
            },
            "is_virtual" : {
               "enum" : [0],
               "type" : "integer"
            },
            "landing_company_name" : {
               "type" : "string",
               "pattern" : "^costarica$"
            },
            "balance" : {
               "enum" : [0],
               "type" : "number"
            },
            "scopes" : {
               "minItems" : 4,
               "type" : "array",
               "items" : {
                  "pattern" : "^(admin|payments|read|trade)$",
                  "type" : "string"
               }
            },
            "account_list" : {
               "items" : {
                  "type" : "object",
                  "properties" : {
                     "excluded_until" : {
                        "type" : "integer"
                     },
                     "currency" : {
                        "type" : "string"
                     },
                     "landing_company_name" : {
                        "type" : "string"
                     },
                     "loginid" : {
                        "type" : "string",
                        "pattern" : "^[A-Z]{2,4}\\d+$"
                     },
                     "is_virtual" : {
                        "enum" : [0,1],
                        "type" : "integer"
                     },
                     "is_disabled" : {
                        "enum" : [0,1],
                        "type" : "integer"
                     }
                  }
               },
               "description" : "List of accounts for current client",
               "type" : "array"
            },
            "fullname" : {
               "type" : "string",
               "pattern" : "^Mr [_3] Pan$"
            },
            "landing_company_fullname" : {
               "type" : "string",
               "pattern" : "^Binary \\(C\\.R\\.\\) S\\.A\\.$"
            },
            "loginid" : {
               "pattern" : "^CR\\d+$",
               "type" : "string"
            },
            "currency" : {
               "pattern" : "^$",
               "type" : "string"
            },
            "country" : {
               "pattern" : "^[a-z]{0,2}$",
               "type" : "string"
            }
         },
         "required" : [
            "email",
            "is_virtual",
            "landing_company_name",
            "balance",
            "scopes",
            "fullname",
            "landing_company_fullname",
            "loginid",
            "currency",
            "country"
         ]
      }
   }
}
