{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "echo_req": {
        "required": "1"
    },
    "authorize": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "pattern": "^[_2]$",
          "required": "1"
        },
        "currency": {
          "type": "string",
          "pattern": "^$",
          "required": "1"
        },
        "balance": {
          "type": "number",
          "pattern": "^0.00$",
          "required": "1"
        },
        "loginid": {
          "type": "string",
          "pattern": "^MLT\\d+$",
          "required": "1"
        },
        "is_virtual": {
          "type": "string",
          "pattern": "^0$",
          "required": "1"
        },
        "landing_company_name": {
          "type": "string",
          "pattern": "^malta$",
          "required": "1"
        },
        "landing_company_fullname": {
          "type": "string",
          "pattern": "^Binary \\(Europe\\) Ltd$",
          "required": "1"
        },
        "country": {
          "type": "string",
          "pattern": "^[a-z]{0,2}$",
          "required": "1"
        },
        "fullname": {
          "type": "string",
          "pattern": "^Mr [_3] Pan$",
          "required": "1"
        },
        "scopes": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "string",
            "pattern": "^(admin|payments|read|trade)$"
          },
          "required": "1"
        },
        "account_list": {
          "type": "array",
          "description": "List of accounts for current client",
          "items": {
            "type": "object",
            "properties": {
              "currency": {
                "type": "string"
              },
              "excluded_until": {
                "type": "integer"
              },
              "is_disabled": {
                "type": "integer",
                "pattern": "^(1|0)$"
              },
              "is_ico_only": {
                "type": "integer",
                "pattern": "^(1|0)$"
              },
              "is_virtual": {
                "type": "integer",
                "pattern": "^(1|0)$"
              },
              "landing_company_name": {
                "type": "string"
              },
              "loginid": {
                "type": "string",
                "pattern": "^[A-Z]{2,4}\\d+$"
              }
            }
          }
        }
      },
      "required": "1"
    },
    "msg_type": {
        "type": "string",
        "pattern": "^authorize$",
        "required": "1"
    }
  }
}
