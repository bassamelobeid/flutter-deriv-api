{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "description" : null,
   "additionalProperties" : null,
   "type" : "object",
   "title" : null,
   "required" : [
      "msg_type",
      "echo_req"
   ],
   "properties" : {
      "msg_type" : {
         "pattern" : "^authorize$",
         "type" : "string"
      },
      "authorize" : {
         "required" : [
            "currency",
            "country",
            "scopes",
            "fullname",
            "loginid",
            "landing_company_fullname",
            "balance",
            "email",
            "is_virtual",
            "landing_company_name"
         ],
         "type" : "object",
         "properties" : {
            "currency" : {
               "pattern" : "^$",
               "type" : "string"
            },
            "country" : {
               "pattern" : "^[a-z]{0,2}$",
               "type" : "string"
            },
            "scopes" : {
               "minItems" : 4,
               "type" : "array",
               "items" : {
                  "pattern" : "^(admin|payments|read|trade)$",
                  "type" : "string"
               }
            },
            "account_list" : {
               "items" : {
                  "properties" : {
                     "is_disabled" : {
                        "enum" : [1,0],
                        "type" : "integer"
                     },
                     "landing_company_name" : {
                        "type" : "string"
                     },
                     "loginid" : {
                        "pattern" : "^[A-Z]{2,4}\\d+$",
                        "type" : "string"
                     },
                     "is_virtual" : {
                        "type" : "integer",
                        "enum" : [1,0]
                     },
                     "currency" : {
                        "type" : "string"
                     },
                     "excluded_until" : {
                        "type" : "integer"
                     }
                  },
                  "type" : "object"
               },
               "type" : "array",
               "description" : "List of accounts for current client"
            },
            "fullname" : {
               "pattern" : "^Mr [_3] Pan$",
               "type" : "string"
            },
            "loginid" : {
               "pattern" : "^MLT\\d+$",
               "type" : "string"
            },
            "landing_company_fullname" : {
               "type" : "string",
               "pattern" : "^Binary \\(Europe\\) Ltd$"
            },
            "balance" : {
               "type" : "number",
               "enum" : [0]
            },
            "email" : {
               "type" : "string",
               "pattern" : "^[_2]$"
            },
            "is_virtual" : {
               "enum" : [0],
               "type" : "integer"
            },
            "landing_company_name" : {
               "pattern" : "^malta$",
               "type" : "string"
            }
         }
      },
      "echo_req" : {}
   }
}
