{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "echo_req",
      "msg_type"
   ],
   "title" : null,
   "additionalProperties" : null,
   "type" : "object",
   "description" : null,
   "properties" : {
      "authorize" : {
         "required" : [
            "country",
            "currency",
            "landing_company_fullname",
            "loginid",
            "fullname",
            "scopes",
            "balance",
            "landing_company_name",
            "is_virtual",
            "email"
         ],
         "properties" : {
            "country" : {
               "type" : "string",
               "pattern" : "^[a-z]{0,2}$"
            },
            "currency" : {
               "pattern" : "^USD$",
               "type" : "string"
            },
            "landing_company_fullname" : {
               "type" : "string",
               "pattern" : "^Binary Ltd$"
            },
            "loginid" : {
               "pattern" : "^VRTC\\d+$",
               "type" : "string"
            },
            "fullname" : {
               "type" : "string",
               "pattern" : "^  $"
            },
            "scopes" : {
               "minItems" : 4,
               "type" : "array",
               "items" : {
                  "pattern" : "^(admin|payments|read|trade)$",
                  "type" : "string"
               }
            },
            "balance" : {
               "enum" : [10000],
               "type" : "number"
            },
            "landing_company_name" : {
               "type" : "string",
               "pattern" : "^virtual$"
            },
            "is_virtual" : {
               "type" : "number",
               "enum" : [1]
            },
            "email" : {
               "type" : "string",
               "pattern" : "^[_2]$"
            }
         },
         "type" : "object"
      },
      "echo_req" : {},
      "msg_type" : {
         "pattern" : "^authorize$",
         "type" : "string"
      }
   }
}
