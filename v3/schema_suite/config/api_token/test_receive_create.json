{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "api_token": {
      "type": "object",
      "properties": {
        "tokens": {
          "type": "array",
          "items": {
              "type": "object",
              "properties": {
                  "scopes": {
                      "minItems": 4,
                      "items": {
                        "type": "string",
                        "pattern": "^(read|trade|payments|admin)$"
                      },
                      "required": "1"
                  },
                  "token": {
                      "type": "string",
                      "pattern": "^.{15}$",
                      "required": "1"
                  },
                  "display_name": {
                      "type": "string",
                      "pattern": "^test$",
                      "required": "1"
                  },
                  "last_used": {
                      "type": ["string", "null"],
                      "pattern": "^([0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2})?$",
                      "required": "1"
                  }
              }
          },
          "required": "1"
        },
        "new_token": {
          "type":"integer",
          "pattern": "^1$",
          "required": "1"
        }
      }
    },
    "echo_req": {
        "required": "1"
    },
    "msg_type": {
      "type": "string",
      "pattern": "^api_token$",
      "required": "1"
    }
  }
}
