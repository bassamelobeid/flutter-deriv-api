{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "title" : null,
   "additionalProperties" : null,
   "type" : "object",
   "description" : null,
   "required" : [
      "msg_type",
      "echo_req"
   ],
   "properties" : {
      "api_token" : {
         "type" : "object",
         "properties" : {
            "tokens" : {
               "type" : "array",
               "items" : {
                  "type" : "object",
                  "properties" : {
                  "required": ["token", "last_used", "scopes", "display_name"], 
                     "token" : {
                        "type" : "string",
                        "pattern" : "^[_1]$"
                     },
                     "last_used" : {
                        "pattern" : "^(\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2})?$",
                        "type" : [
                           "string",
                           "null"
                        ]
                     },
                     "display_name" : {
                        "type" : "string",
                        "pattern" : "^test$"
                     },
                     "scopes" : {
                        "items" : {
                           "pattern" : "^read$",
                           "type" : "string"
                        },
                        "minItems" : 1
                     }
                  }
               }
            }
         },
         "required" : [
            "tokens"
         ]
      },
      "msg_type" : {
         "type" : "string",
         "pattern" : "^api_token$"
      },
      "echo_req" : {}
   }
}
