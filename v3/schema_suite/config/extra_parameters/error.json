{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "error": {
            "type": "object",
            "required": "1",
            "properties": {
                "code": {
                    "type": "string",
                    "pattern": "^InputValidationFailed",
                    "required": "1"
                },
                "message": {
                    "type": "string",
                    "pattern": "Input validation failed: [_1]",
                    "required": "1"
                },
                "details": {
                    "type": "object",
                    "required": "1",
                    "[_1]" : { "type": "string",
                        "pattern": "the schema does not allow additional properties",
                        "required": "1"
                    }
                }
            }
        }
    }
}
