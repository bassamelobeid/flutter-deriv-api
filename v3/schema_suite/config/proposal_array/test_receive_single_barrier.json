{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "proposal_array": {
            "type": "object",
            "required": "1",
            "properties" : {
                "id": {
                    "type": "string",
                    "pattern": "[\\d\\w-]+$",
                    "required": "1"
                },
                "proposals" : {
                    "type": "array",
                    "required" : "1",
                    "items" :{
                        "type": "object",
                        "properties": {
                            "barrier": {
                                "required" : "1",
                                "enum" : ["[_5]","[_6]"]
                            },
                            "longcode": {
                                "type": "string",
                                "pattern": "^[_7]$",
                                "required": "1"
                            },
                            "ask_price": {
                                "type": "number",
                                "pattern": "^[_8]$",
                                "required": "1"
                            },
                            "display_value": {
                                "type": "number",
                                "pattern": "^[_9]$",
                                "required": "1"
                            },
                            "date_start": {
                                "type": "number",
                                "pattern": "^\\d+$",
                                "required": "1"
                            },
                            "payout": {
                                "type": "number",
                                "pattern": "^100$",
                                "required": "1"
                            },
                            "spot": {
                                "type": "number",
                                "pattern": "^[_10]$",
                                "required": "1"
                            },
                            "spot_time": {
                                "type": "number",
                                "pattern": "^\\d+$",
                                "required": "1"
                            }
                        }
                    }
                }
            }
        },
        "echo_req": {
            "required": "1"
        },
        "msg_type": {
            "type": "string",
            "pattern": "^proposal_array$",
            "required": "1"
        }
    }
}
