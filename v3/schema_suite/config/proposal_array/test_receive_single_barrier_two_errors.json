{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "proposal_array": {
            "type": "object",
            "required": "1",
            "properties" : {
                "id": {
                    "type": "string",
                    "pattern": "[\\d\\w-]+$",
                    "required": "1"
                },
                "proposals" : {
                    "type": "array",
                    "required" : "1",
                    "items" : {
                        "type": "object",
                        "properties" : {
                            "error" :{
                                "type" : "object",
                                "required": "1",
                                "properties": {
                                    "message_to_client" : {
                                        "type" : "string",
                                        "required" : "1",
                                        "enum": ["Barrier is not an integer between 0 to 9."]
                                    },
                                    "details": {
                                        "type" : "object",
                                        "required" : "1",
                                        "properties": {
                                            "display_value": {
                                                "required" : "1"
                                            },
                                            "barrier": {
                                                "required" : "1",
                                                "enum" : ["[_5]","[_6]"]
                                            },
                                            "payout": {
                                                "required" : "1"
                                            }
                                        }
                                    },
                                    "continue_price_stream": {
                                        "required" : "1",
                                        "pattern" : "^1$"
                                    },
                                    "code": {
                                        "required": "1",
                                        "pattern": "^ContractBuyValidationError$"
                                    }
                                }
                            }
                        }
                    }
                    
                }
            }
        },
        "echo_req": {
            "required": "1"
        },
        "msg_type": {
            "type": "string",
            "pattern": "^proposal_array$",
            "required": "1"
        }
    }
}
