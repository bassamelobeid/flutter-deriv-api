{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "echo_req": {
            "required": "1"
        },
        "balance": {
            "type": "object",
            "required": "1",
            "properties": {
                "balance": {
                    "type": "number",
                    "pattern": "^[_1]$",
                    "required": "1"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^[_2]$",
                    "required": "1"
                },
                "loginid": {
                    "type": "string",
                    "pattern": "^[_3]$",
                    "required": "1"
                },
                "id": {
                    "type": "string",
                    "required": "1"
                }
            }
        },
        "msg_type": {
            "type": "string",
            "pattern": "^balance$",
            "required": "1"
        },
        "subscription": {
            "type": "object",
            "required": 1,
            "properties":{
                "id": {
                    "type": "string",
                    "required": 1
                }
            }
        }
    }
}
