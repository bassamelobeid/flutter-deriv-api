{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "additionalProperties" : null,
   "title" : null,
   "type" : "object",
   "description" : null,
   "required" : [
      "echo_req",
      "msg_type"
   ],
   "properties" : {
      "get_account_status" : {
         "required" : [
            "prompt_client_to_authenticate",
            "status",
            "risk_classification"
         ],
         "properties" : {
            "prompt_client_to_authenticate" : {
               "enum" : [1,0]
            },
            "status" : {
               "type" : "array"
            },
            "risk_classification" : {
               "pattern" : "^(low|standard|high)?$",
               "type" : [
                  "string",
                  "null"
               ]
            },
            "authentication" : {
               "type" : "object",
               "required": [
                   "needs_verification",
                   "document",
                   "identity"
               ],
               "properties" : {
                   "needs_verification" : {
                       "type" : "array"
                   },
                   "document" : {
                       "type" : "object",
                       "properties" : {
                           "status" : {
                               "type" : "string",
                               "enum": [
                                  "none",
                                  "pending",
                                  "rejected",
                                  "verified",
                                  "expired",
                                  "suspected"
                              ]
                           },
                           "expiry_date" : {
                               "type" : "integer"
                           },
                           "further_submissions_allowed": {
                               "type": "integer"
                           }
                       }
                   },
                   "identity" : {
                       "type" : "object",
                       "properties" : {
                           "status" : {
                               "type" : "string",
                               "enum": [
                                  "none",
                                  "pending",
                                  "rejected",
                                  "verified",
                                  "expired",
                                  "suspected"
                              ]
                           },
                           "expiry_date" : {
                               "type" : "integer"
                           },
                           "further_submissions_allowed": {
                               "type": "integer"
                           }
                       }
                   }
               }
            }
         },
         "type" : "object"
      },
      "echo_req" : {},
      "msg_type" : {
         "type" : "string",
         "pattern" : "^get_account_status$"
      }
   }
}
