{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "echo_req": {
            "required": "1"
        },
        "get_limits": {
            "type": "object",
            "properties": {
                "account_balance": {
                  "type": "number",
                  "pattern": "^300000.00$",
                  "required": "1"
                },
                "lifetime_limit": {
                  "type": "number",
                  "pattern": "^10000.00$",
                  "required": "1"
                },
                "market_specific": {
                  "type": "object",
                  "properties": {
                      "commodities": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "name": {
                                      "type": "string",
                                      "pattern": "^Commodities$"
                                  },
                                  "turnover_limit": {
                                      "type": "number",
                                      "pattern": "^50000.00$"
                                  }
                              }
                          },
                          "required": "1"
                      },
                      "forex": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "name": {
                                      "type": "string",
                                      "pattern": "^(Major Pairs|Minor Pairs|Smart FX)$"
                                  },
                                  "turnover_limit": {
                                      "type": "number",
                                      "pattern": "^(100000.00|50000.00)$"
                                  }
                              }
                          },
                          "required": "1"
                      },
                      "indices": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "name": {
                                      "type": "string",
                                      "pattern": "^Indices$"
                                  },
                                  "turnover_limit": {
                                      "type": "number",
                                      "pattern": "^100000.00$"
                                  }
                              }
                          },
                          "required": "1"
                      },
                      "volidx": {
                          "type": "array",
                          "items": {
                              "type": "object",
                              "properties": {
                                  "name": {
                                      "type": "string",
                                      "pattern": "^Volatility Indices$"
                                  },
                                  "turnover_limit": {
                                      "type": "number",
                                      "pattern": "^500000.00$"
                                  }
                              }
                          },
                          "required": "1"
                      }
                  }
                },
                "num_of_days": {
                  "type": "integer",
                  "pattern": "^30$",
                  "required": "1"
                },
                "num_of_days_limit": {
                  "type": "number",
                  "pattern": "^10000.00$",
                  "required": "1"
                },
                "open_positions": {
                  "type": "integer",
                  "pattern": "^60$",
                  "required": "1"
                },
                "payout": {
                  "type": "number",
                  "pattern": "^50000.00$",
                  "required": "1"
                },
                "remainder": {
                  "type": "number",
                  "pattern": "^10000.00$",
                  "required": "1"
                },
                "withdrawal_for_x_days_monetary": {
                  "type": "number",
                  "pattern": "^0.00$",
                  "required": "1"
                },
                "withdrawal_since_inception_monetary": {
                  "type": "number",
                  "pattern": "^0.00$",
                  "required": "1"
                }
            },
            "required": "1"
        },
        "msg_type":{
            "type": "string",
            "pattern": "^get_limits$",
            "required": "1"
        }
    }
}
