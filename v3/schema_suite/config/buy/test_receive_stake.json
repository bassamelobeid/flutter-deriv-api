{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "echo_req": {
      "required": 1
    },
    "buy": {
      "type": "object",
      "properties": {
        "balance_after": {
          "type": "number",
          "required": 1
        },
        "longcode": {
          "type": "string",
          "required": 1
        },
        "shortcode": {
          "type": "string",
          "required": 1
        },
        "start_time": {
          "type": "integer",
          "pattern": "^\\d{10}$",
          "required": 1
        },
        "contract_id": {
          "type": "integer",
          "required": 1
        },
        "buy_price": {
          "type": "number",
          "pattern": "10",
          "required": 1
        },
        "purchase_time": {
          "type": "integer",
          "pattern": "^\\d{10}$",
          "required": 1
        },
        "transaction_id": {
          "type": "integer",
          "required": 1
        },
        "payout": {
            "type": "number",
            "required": 1
        }
      },
      "required": 1
    },
    "msg_type": {
      "type": "string",
      "pattern":"^buy$",
      "required": 1
    }
  }
}
