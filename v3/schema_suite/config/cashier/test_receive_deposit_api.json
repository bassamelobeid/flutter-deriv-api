{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "echo_req",
      "msg_type",
      "cashier"
   ],
   "type" : "object",
   "properties" : {
      "echo_req" : {
          "type": "object"
      },
      "cashier" : {
         "properties" : {
            "action" : {
               "type" : "string",
               "pattern" : "^deposit$"
            },
            "deposit" : {
                "type" : "object",
                "properties": {
                    "address": {
                        "type": "string"
                    }
                },
                "required" : [
                    "address"
                ]
            }
         },
         "type" : "object",
         "required" : [
            "action",
            "deposit"
         ]
      },
      "msg_type" : {
         "pattern" : "^cashier$",
         "type" : "string"
      }
   }
}
