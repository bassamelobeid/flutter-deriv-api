{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "description" : null,
   "additionalProperties" : null,
   "title" : null,
   "type" : "object",
   "required" : [
      "msg_type",
      "echo_req",
      "oauth_apps"
   ],
   "properties" : {
      "msg_type" : {
         "pattern" : "^oauth_apps$",
         "type" : "string"
      },
      "echo_req" : {},
      "oauth_apps" : {
         "items" : {
            "type" : "object",
            "required": ["last_used", "name", "app_id", "scopes", "app_markup_percentage"],
            "properties" : {
               "last_used" : {
                  "type" : [
                     "string",
                     "null"
                  ]
               },
               "name" : {
                  "type" : "string"
               },
               "app_id" : {
                  "type" : "integer"
               },
               "scopes" : {
                  "minItems" : 1,
                  "type" : "array",
                  "items" : {
                     "pattern" : "^(read|trade|payments|admin)$",
                     "type" : "string"
                  },
                  "maxItems" : 4
               },
               "app_markup_percentage" : {
                  "type" : "number"
               }
            }
         },
         "type" : "array"
      }
   }
}
