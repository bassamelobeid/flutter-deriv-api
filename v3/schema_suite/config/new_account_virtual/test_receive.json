{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "description" : null,
   "type" : "object",
   "title" : null,
   "required" : [
      "echo_req",
      "msg_type",
      "new_account_virtual" 
   ],
   "properties" : {
      "new_account_virtual" : {
         "properties" : {
            "type" : {
               "type" : "string",
               "default": "trading",
               "enum" : [
                  "trading",
                  "wallet"
               ]
            },
            "currency" : {
               "type" : "string",
               "pattern" : "^USD$"
            },
            "balance" : {
               "type" : "number",
               "enum" : [
                  10000
               ]
            },
            "client_id" : {
               "pattern" : "^VRTC\\d+$",
               "type" : "string"
            },
            "oauth_token" : {
               "type" : "string"
            },
            "refresh_token" : {
               "type" : "string"
            },
            "email" : {
               "pattern" : "^[_2]$",
               "type" : "string"
            }
         },
         "type" : "object",
         "required" : [
            "currency",
            "balance",
            "client_id",
            "oauth_token",
            "email"
         ]
      },
      "echo_req" : {},
      "msg_type" : {
         "type" : "string",
         "pattern" : "^new_account_virtual$"
      }
   }
}
