{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "echo_req": {
        "required": "1"
    },
    "app_update": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^Test$",
          "required": "1"
        },
        "app_id": {
          "type": "integer",
          "required": "1"
        },
        "scopes": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "string",
            "pattern": "^(read|trade|payments)$"
          },
          "required": "1"
        },
        "redirect_uri": {
          "type": "string",
          "pattern": "^https\\:\/\/test\\-app\\.example\\.com\/redirect$",
          "required": "1"
        },
        "signup_uri": {
          "type": "string",
          "pattern": "^https\\:\/\/test\\-app\\.example\\.com\/signup$",
          "required": "1"
        },
        "homepage": {
          "type": "string",
          "pattern": "^https\\:\/\/test\\-app\\.example\\.com\/$",
          "required": "1"
        },
        "github": {
          "type": "string",
          "pattern": "^https\\:\/\/github\\.com\/test_application\/app$",
          "required": "1"
        },
        "appstore": {
          "type": "string",
          "pattern": "^https\\:\/\/itunes\\.apple\\.com\/test_application$",
          "required": "1"
        },
        "googleplay": {
          "type": "string",
          "pattern": "^https\\:\/\/play\\.google\\.com\/test_application$",
          "required": "1"
        },
        "app_markup_percentage": {
          "type": "number",
          "pattern": "^2.5$",
          "required": "1"
        }
      },
      "required": "1"
    },
    "msg_type": {
      "type": "string",
      "pattern": "^app_update$",
      "required": "1"
    }
  }
}
