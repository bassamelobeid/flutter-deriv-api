{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
       "echo_req",
       "msg_type"
   ],
   "type" : "object",
   "description" : null,
   "title" : "Provides cryptocurrencies configuration.",
   "properties" : {
       "msg_type" : {
           "description" : "crypto_config",
           "type" : "string"
       },
       "crypto_config" : {
           "required" : ["currencies_config"],
           "properties" : {
                "currencies_config": {
                   "description" : "Provides minimum withdrawal for all cryptocurrencies in USD",
                   "type": "object",
                   "minProperties" :  1,
                   "patternProperties": {
                       "^[a-zA-Z0-9]{2,20}$": {
                           "type": "object",
                           "properties": {
                               "minimum_deposit": {
                                "type": "number"
                               },
                               "minimum_withdrawal": {
                                   "type": "number"
                               }
                           }
                       }
                   }
               }
           }
       },
       "minProperties" : 1
   },
   "msg_type" : {
       "type" : "string",
       "description" : "crypto_config"
   },
   "req_id" : {
       "description" : "Optional field send in request to map to response, present only when request contains req_id",
       "type" : "integer"
   }
}
