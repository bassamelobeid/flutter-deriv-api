{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "echo_req": {
      "required": 1
    },
    "copytrading_statistics": {
      "type":"object",
      "properties": {
        "active_since": {
          "type": "integer",
          "pattern": "^[0-9]+$",
          "required": 1
        },
        "monthly_profitable_trades": {
          "type": "object",
          "patternProperties": {
            "^[0-9]{4}\\-[0-9]{2}$": {
              "type": "number",
              "pattern": "^-?[0-9]\\.[0-9]{2}([1-9]0|0[1-9]|[1-9]{2})$",
              "required": 1
            }
          }
        },
        "yearly_profitable_trades": {
          "type": "object",
          "patternProperties": {
            "^[0-9]{4}$": {
              "type": "number",
              "pattern": "^-?[0-9]\\.[0-9]{2}([1-9]0|0[1-9]|[1-9]{2})$",
              "required": 1
            }
          }
        },
        "last_12months_profitable_trades": {
          "type": "number",
          "pattern": "^-?[0-9]\\.[0-9]{2}([1-9]0|0[1-9]|[1-9]{2})$",
          "requred": 1
        },
        "total_trades": {
          "type": "integer",
          "pattern": "^0$",
          "requred": 1
        },
        "trades_profitable": {
          "type": "number",
          "pattern": "^0\\.0000$",
          "requred": 1
        },
        "avg_duration": {
          "type": "integer",
          "pattern": "^0$",
          "requred": 1
        },
        "avg_profit": {
          "type": "number",
          "pattern": "^0\\.0000$",
          "requred": 1
        },
        "avg_loss": {
          "type": "number",
          "pattern": "^0\\.0000$",
          "requred": 1
        },
        "trades_breakdown": {
          "type": "object",
          "patternProperties": {
            "^\\w+$": {
              "type": "object",
              "required": 1
            }
          }
        }
      }
    },
    "msg_type": {
      "type": "string",
      "required": 1
    },
    "req_id": {
      "type": "integer"
    }
  }
}
