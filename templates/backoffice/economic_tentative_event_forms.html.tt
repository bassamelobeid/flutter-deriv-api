<p><b>Tentative events list:</b></p>[% FOREACH row = events %] [% END %]
<table>
    <tr>
        <td>Date:</td>
        <td>Time:</td>
        <td>Release Datetime:</td>
        <td>Currency:</td>
        <td>Impact:</td>
        <td></td>
        <td colspan="2">Tentative Event Shift:(0.25 for BOJ)</td> 
        <td></td>
    </tr>
    [% FOREACH row = events %]
    <tr id="[% row.id %]">
        <td>[% row.date %]</td>
        <td><input class="blankout" type="time" value="[% row.blankout %]"> -
        <input class="blankout_end" type="time" value="[% row.blankout_end %]"></td>
        <td><input type='text' name='release_date'></input></td>
        <td>[% row.symbol %]</td>
        <td>[% row.impact %]</td>
        <td>[% row.event_name %]</td>
        <td><input class="tentative_event_shift" type="text" style='width: 30px' value="[% row.tentative_event_shift %]">&nbsp;% 
        <td><button onclick=
        "updateEvent('[% row.id %]');">Update</button></td>
        <td><button onclick=
        "deleteEvent('[% row.id %]');">Delete</button></td>
        <td class="result"></td>
    </tr>
    [% END %]
</table>
<script>
	function updateEvent(id){
		if(id){
			var el = \$('#'+id);
			if(el.length>0){
				var result = el.find('.result');
				var m1 = el.find('.blankout').val().match(/^(\d+):(\d+)\$/);
				if(!m1 || m1[1]<0 || m1[1]>23 || m1[2]<0 || m1[2]>59){
					result.text('Wrong blankout start time').css('color','red');
					return;
				}
				var m2 = el.find('.blankout_end').val().match(/^(\d+):(\d+)\$/);
				if(!m2 || m2[1]<0 || m2[1]>23 || m2[2]<0 || m2[2]>59){
					result.text('Wrong blankout end time').css('color','red');
					return;
				}
				result.text('Saving.....').css('color','black');
				\$.ajax({
					url: "[%ee_upload_url | none %]",
					data: {
                                                update_event: 1,
						id: id,
						blankout: el.find('.blankout').val(),
						blankout_end: el.find('.blankout_end').val(),
						tentative_event_shift: el.find('.tentative_event_shift').val(),
                                                release_date: el.find('input[name="release_date"]').val()
					},
					success: function(data){
						if(data==1){
							result.text('Successful').css('color','green');
						}
						else{
							result.text(data).css('color','red');
						}
					}
				});
			}
		}
	}
</script>
