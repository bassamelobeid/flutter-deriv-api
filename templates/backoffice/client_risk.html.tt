<div>
    <hr>Client Risk:</br></br>
    <form action="[% request.url_for('backoffice/client_risk_report.cgi') %]" method="post">
        <b>Loginid: </b>
        <input type="text" name="loginid" value="[% loginid %]">
        <br/>
        <b>Comment: </b>
        <input type="text" name="comment">
        <br/>
        <input type="submit" name="action" value="show">
        <input type="submit" name="action" value="only add comment">
        <input type="submit" name="action" value="generate report">
    </form>
</div>

<div style="color:white;border:solid;text-align:left">
    <b>Loginid: </b> [% data.client_details.loginid %] <br/>
    <b>Name: </b> [% data.client_details.name %] <br/>
    <b>Residence: </b> [% data.client_details.residence %] <br/>
    <b>Citizen: </b> [% data.client_details.citizen %] <br/>
    <b>Date Joined: </b> [% data.client_details.date_joined %] <br/>
</div>



[% FOREACH rdate IN data.report.keys.sort %]
    <div style="color:white;border:solid;text-align:left">
        * <b>staff: </b> [% data.report.$rdate.clerk %] <br/>
        * <b>date: </b> [% rdate %] <br/>
        <br/>
        [% FOREACH fa IN data.report.$rdate.financial_assessment.keys.sort %] 
            * <b>[% fa %]: </b> [% data.report.$rdate.financial_assessment.$fa %] <br/>
        [% END %]
        <br/>
        * <b>deposit: </b> [% data.report.$rdate.total_deposits_withdrawals.deposit %] <br/>
        * <b>withdrawal: </b> [% data.report.$rdate.total_deposits_withdrawals.withdrawal %] <br/>
        * <b>net: </b> [% data.report.$rdate.total_deposits_withdrawals.deposit - data.report.$rdate.total_deposits_withdrawals.withdrawal %] <br/>
        * <b>balance: </b> [% data.report.$rdate.total_deposits_withdrawals.balance %] <br/>
    </div>
[% END %]



<div style="color:white;border:solid;text-align:left">
    * <b>authenticated: </b> [% data.client_details.id_authentication %]  <br/>
    <br/>
    [% FOREACH key IN data.documents.keys.sort %]
        * <b>[% key %]: </b> [% data.documents.$key %] <br/>
    [% END %]
</div>


<div style="color:white;border:solid;text-align:left">
<b>Country change: </b><br/>
    [% FOREACH key IN data.country_change %]
        * [% key.first_login_date %] ([% key.country %]) <br/>
        <br/>
    [% END %]
</div>


<div style="color:white;border:solid;text-align:left">
    [% FOREACH key IN data.comment.keys.sort %]
        * <b> [% key %] : </b> [% data.comment.$key %] <br/>
    [% END %]
</div>
