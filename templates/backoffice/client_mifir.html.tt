[%- MACRO documents_info BLOCK; -%]
    [% IF citizenship %]
        Citizenship of $citizenship
        <br>
        [% IF data.country %]
            Possible documents for [% data.country %]
        [% END %]
        <br>
        <!-- We need to show concat for non EU citizens as well
            so if its not in mifir countries list it means its non EU
        -->
        [% IF !data.country and citizenship %]
            <button class="btn btn--primary" type="submit" name="view_action" value="mifir_set_concat">Concat</button>
        [% END %]
        [% FOREACH i IN data.keys %]
            [% NEXT IF i == 'country' %]
            [% IF i == 'CONCAT' %]
                    <button class="btn btn--primary" type="submit" name="view_action" value="mifir_set_concat">Concat</button>
                    <br>
                    [% NEXT %]
            [% END %]
            <b> $i </b>, can be obtained from:
            <ul>
                [% FOREACH j IN data.$i %]
                    <li> $j </li>
                [% END %]
            </ul>
        [% END %]
    [% ELSE %]
        Citizenship not selected
    [% END %]
[%- END -%]

[% IF client.landing_company.short == 'maltainvest' %]
    <tr>
        <td class="bg-lightgrey" colspan="2">#MIFIR ID Number</td>
    </tr>
    <tr>
        <td class="label top">MIFIR ID</td>
        <td><table><tr><td valign="top" style="padding-top: 0px; border-right: 1px solid var(--color-grey-3); padding-right: 10px">:
        [% IF client.mifir_id %]
            <span>[% client.mifir_id %]</span>
            <button class="btn btn--red" type="submit" name="view_action" value="mifir_reset" value="DELETE">Delete</button>
        [% ELSE %]
            <input type="text" name="mifir_id" value="" data-lpignore="true" /><br>
            up to 35 alphanumerical characters
        [% END %]
        </td>
        <td style="padding-top: 0px; padding-left: 10px">
        [% c = client.citizen.upper %]
        [% documents_info(data => mifir_config.countries.$c, citizenship => c) %]
        </td>
        </tr>
        </table>
        </td>
    </tr>
[% END %]
