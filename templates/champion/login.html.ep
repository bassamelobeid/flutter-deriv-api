<h1><%= l('Log in') %></h1>
<fieldset>
    <legend><%= l('Your Details') %></legend>
    <% if (stash('error')) { %>
        <p class='errorfield'><%= stash('error') %></p>
    <% } %>
    <div id="wrapper" class="login">
        <form id="frmLogin" method="POST">
            <div><input type="email" id="txtEmail" name="email" placeholder="<%= l('Email') %>" autocomplete="off" autofocus="autofocus" maxlength="254" /></div>
            <div><input type="password" id="txtPass" name="password" placeholder="<%= l('Password') %>" /></div>
            <div><button type="submit" class="button" name="login" value="<%= l('Log in') %>"><%= l('Log in') %></button></div>
            <input type="hidden" name="csrf_token" value="<%= $csrf_token %>" />
        </form>
    </div>
    <p class="center-text">
        <a id="lost-password" href="https://www.champion-fx.com/<%= lc($r->language) %>/lost-password.html"><%= l('Lost Password?') %></a> |
        <a id="create-account" href="https://www.champion-fx.com/<%= lc($r->language) %>/home.html#signup"><%= l('Open an Account') %></a>
    </p>
</fieldset>
