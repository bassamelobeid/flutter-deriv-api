<style>
#txtOTP::placeholder {
    opacity: 0.8;
}

#txtOTP:focus::placeholder {
    opacity: 0.4;
}

#txtOTP {
    border: 1px solid #CCC;
    margin: 1rem 0rem 1rem 0rem;
}
</style>
<div class="container">
    <p class="center-text"><%= l('Enter the two-factor authentication (2FA) code from the authenticator app on your phone') %></p>
    <% if (stash('error')) { %>
        <p class='error-msg center-text'><%= stash('error') %></p>
    <% } %>
    <form method="POST">
        <input type="hidden" name="csrf_token" value="<%= $csrf_token %>" />
        <div><input type="text" id="txtOTP" name="otp" placeholder="<%= l('Verification Code') %>" autocomplete="off" autofocus="autofocus" /></div>
        <div><button type="submit" class="button" name="totp_proceed" value="<%= l('Proceed') %>"><%= l('Proceed') %></button></div>
    </form>
</div>
