<div id="container" class="reactivate-account">
    <div>
        <h2 class="reactivate-title"><%= l('Want to start trading on Deriv again?') %></h2>
        <p class="reactivate-description">
    <%if ($financial_reasons) { %>
	    <%== l('You closed your account due to financial reasons.') %>
	    <% } %>
            <%== l('By hitting "Start trading", you agree that we will not be responsible for any losses you incur while trading. Please read our [_1]Responsible trading[_2] page for more information.', '<a target="_blank" href="' . $resp_trading_url . '">' , '</a>') %>
        </p>
        <form method="POST">
            <input type="hidden" name="csrf_token" value="<%= $csrf_token %>" />
            <div>
                <button id="btnCancel" class="tertiary" style="margin-left:5px; margin-right:5px" name="cancel_reactivate" value="<%= l('Cancel') %>" type="submit"><%= l('Cancel') %></button>
                <button id="btnGrant" class="secondary" style="margin-left:5px; margin-right:5px" name="confirm_reactivate" value="<%= l('Start trading') %>" type="submit"><%= l('Start trading') %></button>
            </div>
        </form>
    </div>
</div>
