<div id="topbar-binary"></div>
<div id="header-binary">
    <a href="<%= $r->url_for('/home') %>">
        <img id="symbol-logo" src="/oauth2/images/binary-symbol-logo.svg" alt="" />
        <img id="type-logo" src="/oauth2/images/binary-type-logo.svg" alt="Binary.com" />
    </a>
</div>
<div id="container-binary">
    <h1><%= l('Login') %></h1>
    <fieldset>
        <legend><%= l('Your Details') %></legend>
        <% if (stash('error')) { %>
            <p class='errorfield'><%= stash('error') %></p>
        <% } %>
        <div id="wrapper" class="login">
            <form id="frmLogin" method="POST">
                <div><input type="email" id="txtEmail" name="email" placeholder="<%= l('Email') %>" autocomplete="off" autofocus="autofocus" maxlength="254" /></div>
                <div><input type="password" id="txtPass" name="password" placeholder="<%= l('Password') %>" /></div>
                <div><button type="submit" id="btnLogin" class="button" name="login" value="<%= l('Login') %>"><span><%= l('Login') %></span></button></div>
                <input type="hidden" name="csrftoken" value="<%= $csrftoken %>" />
            </form>
        </div>
        <p class="links">
            <a class="pjaxload" id="lost-password" href="<%= $r->url_for('/user/lost_passwordws') %>"><%= l('Lost Password?') %></a> |
            <a class="pjaxload" id="create-account" href="<%= $r->url_for('/home') %>"><%= l('Open an Account') %></a>
        </p>
    </fieldset>
</div>
