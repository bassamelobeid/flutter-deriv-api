{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Statement Send",
  "description": "Retrieve a summary of account transactions, according to given search criteria.",
  "properties": {
    "statement": {
      "type": "array",
      "items": {
    	  "oneOf":
    		  [
    		   {
    			   "type": "object",
    			   "properties": {
    				   "sort_by": {
    					   "type": "string",
    					   "default": "id desc",
    					   "description": "name an output field to sort by, optionally followed by 'desc' for reverse sort order"
    				   }
    			   }
    		   },
    		   {
    			   "type": "object",
    			   "properties": {
    				   "limit": {
    					   "type": "number",
    					   "default": "100",
    					   "description": "Apply upper limit to count of transactions received"
    				   }
    			   }
    		   },
    		   {
    			   "type": "object",
    			   "properties": {
    				   "offset": {
    					   "type": "number",
    					   "default": "0",
    					   "description": "skip this many transactions"
    				   }
    			   }
    		   },
    		   {
    			   "type": "object",
    			   "properties": {
    				   "dt_fm": {
    					   "type": "integer",
    					   "default": 1439432307,
    					   "description": "optional start date"
    				   }
    			   }
    		   },
    		   {
    			   "type": "object",
    			   "properties": {
    				   "dt_to": {
    					   "type": "integer",
    					   "default": 1439432307,
    					   "description": "optional end date"
    				   }
    			   }
    		   },
    		   {
    			   "type": "object",
    			   "properties": {
    				   "yyyymm": {
    					   "type": "integer",
    					   "default": 201510,
    					   "description": "optional short-hand expression of a single month"
    				   }
    			   }
    		   },
    		   {
    			   "type": "object",
    			   "properties": {
    				   "action_type": {
    					   "type": "string",
    					   "enum": ["deposit","withdrawal","buy","sell"],
    					   "description": "optional filter"
    				 }
    			   }
    		   }
    		   ]
      }
    }
  },
  "required": [
    "statement"
  ]
}