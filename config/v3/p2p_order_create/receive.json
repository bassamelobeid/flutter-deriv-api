{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Order Create (response)",
    "description": "The information about the created P2P order.",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "p2p_order_create": {
            "title": "p2p_order_create",
            "description": "Create a P2P offer.",
            "type": "object",
            "properties": {
                "type": {
                    "description": "Type of the order.",
                    "type": "string",
                    "enum": [
                        "buy",
                        "sell"
                    ]
                },
                "account_currency": {
                    "description": "The currency of order.",
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "examples": [
                        "USD"
                    ]
                },
                "agent_id": {
                    "description": "The agent's unique identifier.",
                    "type": "string"
                },
                "agent_name": {
                    "description": "The agent's displayed name.",
                    "type": "string"
                },
                "amount": {
                    "description": "The amount of the order.",
                    "type": "string"
                },
                "created_time": {
                    "description": "The epoch time of the order creation.",
                    "type": "integer"
                },
                "expiry_time": {
                    "description": "The epoch time in which the order will be expired.",
                    "type": "integer"
                },
                "local_currency": {
                    "description": "Local currency for this order.",
                    "type": "string",
                    "pattern": "^[A-Z]{3}$",
                    "examples": [
                        "USD"
                    ]
                },
                "offer_id": {
                    "description": "The unique identifier for the offer.",
                    "type": "string"
                },
                "order_id": {
                    "description": "The unique identifier for this order.",
                    "type": "string"
                },
                "price": {
                    "description": "Cost in local currency.",
                    "type": "string"
                },
                "status": {
                    "description": "The status of the created order.",
                    "type": "string",
                    "enum": [
                        "pending"
                    ]
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "p2p_order_create"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
