{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Order Create (request)",
    "description": "Creates a P2P order.",
    "hidden": 1,
    "type": "object",
    "additionalProperties": false,
    "required": [
        "p2p_order_create"
    ],
    "properties": {
        "p2p_order_create": {
            "description": "Must be 1",
            "type": "integer",
            "enum": [
                1
            ]
        },
        "amount": {
            "description": "The amount of order.",
            "type": "number"
        },
        "offer_id": {
            "description": "The unique identifier for the offer to create an order against.",
            "type": "string",
            "pattern": "^([0-9]+)$"
        },
        "passthrough": {
            "description": "[Optional] Used to pass data through the websocket, which may be retrieved via the `echo_req` output field.",
            "type": "object"
        },
        "req_id": {
            "description": "[Optional] Used to map request to response.",
            "type": "integer"
        }
    }
}
