{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Notification Event (request)",
    "description": "Notify the backend about a specific event.",
    "hidden": 1,
    "type": "object",
    "auth_required": 1,
    "auth_scopes": [
        "admin"
    ],
    "additionalProperties": false,
    "required": [
        "notification_event",
        "category",
        "event"
    ],
    "properties": {
        "notification_event": {
            "description": "Must be `1`",
            "type": "integer",
            "enum": [
                1
            ]
        },
        "args": {
            "description": "Event arguments.",
            "type": "object",
            "additionalProperties": 0,
            "properties": {
                "documents": {
                    "description": "(Optional- for `poi_documents_uploaded` only) An array of onfido document ids intended to be included in the poi check.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "category": {
            "description": "The category or nature of the event.",
            "type": "string",
            "enum": [
                "authentication"
            ]
        },
        "event": {
            "description": "The name of the event.",
            "type": "string",
            "enum": [
                "poi_documents_uploaded"
            ]
        },
        "passthrough": {
            "description": "[Optional] Used to pass data through the websocket, which may be retrieved via the `echo_req` output field.",
            "type": "object"
        },
        "req_id": {
            "description": "[Optional] Used to map request to response.",
            "type": "integer"
        }
    }
}
