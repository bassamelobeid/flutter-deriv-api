{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Request Customer Authentication",
  "description": "Send documents for the authentication process",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made",
      "required": 1
    },
    "document_upload": {
      "type": "object",
      "title": "Document Upload",
      "required": 1,
      "properties":{
        "upload_id": {
          "type": "number",
          "description": "Current upload ID",
          "required": 1
        },
        "call_type": {
          "type": "number",
          "description": "Current call type",
          "required": 1
        },
        "size": {
          "type": "number",
          "description": "File size",
          "required": 1
        },
        "checksum": {
          "type": "string",
          "description": "Hex encoded SHA-1 checksum of the file",
          "required": 1
        },
        "status": {
          "type": "string",
          "description": "Upload status (success|failure)",
          "required": 1
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description": "get_settings",
      "required": 1
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  }
}
