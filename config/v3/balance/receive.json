{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Realtime Balance",
  "description": "Return details of user account balance",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made"
    },
    "balance": {
      "type": "object",
      "title": "Lastest balance of client",
      "description": "Realtime stream of user balance changes.",
      "properties": {
          "balance": {
            "type": "number",
            "description": "Balance amount",
            "pattern": "^([.0-9]{1,25})$"
          },
          "currency": {
            "type": "string",
            "description": "Currency Example: USD",
            "pattern": "^(|[A-Z]{3})$"
          },
          "loginid": {
            "type": "string",
            "description": "Client loginid Example: CR000000",
            "pattern": "^([A-Z0-9]{1,25})$"
          }
      }
    },
    "msg_type": {
        "type": "string",
        "description": "balance"
    },
    "req_id": {
        "type": "integer",
        "description": "Optional field send in request to map to response if req_id is send in request"
    }
  },
  "required": [
    "echo_req",
    "msg_type"
  ]
}
