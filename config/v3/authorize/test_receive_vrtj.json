{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "authorize": {
            "type": "object",
            "required": "1",
            "properties": {
                "email": {
                    "type": "string",
                    "pattern": "^test-jp@binary.com$",
                    "required": "1"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^JPY$",
                    "required": "1"
                },
                "balance": {
                    "type": "number",
                    "pattern": "^1000000.0000$",
                    "required": "1"
                },
                "loginid": {
                    "type": "string",
                    "pattern": "^VRTJ\\d+$",
                    "required": "1"
                },
                "is_virtual": {
                    "type": "string",
                    "pattern": "^1$",
                    "required": "1"
                },
                "landing_company_name": {
                    "type": "string",
                    "pattern": "^japan-virtual$",
                    "required": "1"
                },
                "fullname": {
                    "type": "string",
                    "pattern": "^  $",
                    "required": "1"
                },
                "scopes": {
                    "type": "array",
                    "required": "1",
                    "minItems": 4,
                    "items": {
                        "type": "string",
                        "pattern": "^(admin|payments|read|trade)$"
                    }
                }
            }
        },
        "echo_req": {
            "required": "1"
        },
        "msg_type": {
            "type": "string",
            "pattern": "^authorize$",
            "required": "1"
        }
    }
}
