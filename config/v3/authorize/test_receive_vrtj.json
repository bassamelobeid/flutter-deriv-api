{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "authorize": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "pattern": "^test-jp@binary.com$"
        },
        "currency": {
          "type": "string",
           "pattern": "^JPY$"
        },
        "balance": {
          "type": "number",
          "pattern": "^1000000.0000$"
        },
        "loginid": {
          "type": "string",
          "pattern": "^VRTJ\\d+$"
        },
        "is_virtual": {
          "type": "string",
          "pattern": "^1$"
        },
        "landing_company_name": {
          "type": "string",
          "pattern": "^japan-virtual$"
        },
        "fullname": {
          "type": "string",
          "pattern": "^  $"
        },
        "scopes": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "string",
            "pattern": "^(admin|payments|read|trade)$"
          }
        }
      }
    },
    "echo_req": {
    },
    "msg_type": {
      "type": "string",
      "pattern": "^authorize$"
    }
  },
  "required": [
    "authorize",
    "echo_req",
    "msg_type"
  ]
}
