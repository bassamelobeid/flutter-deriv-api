{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "echo_req": {
        "required": "1"
    },
    "authorize": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "pattern": "^test-mlt@binary.com$",
          "required": "1"
        },
        "currency": {
          "type": "string",
          "pattern": "^$",
          "required": "1"
        },
        "balance": {
          "type": "number",
          "pattern": "^0.00$",
          "required": "1"
        },
        "loginid": {
          "type": "string",
          "pattern": "^MLT\\d+$",
          "required": "1"
        },
        "is_virtual": {
          "type": "string",
          "pattern": "^0$",
          "required": "1"
        },
        "landing_company_name": {
          "type": "string",
          "pattern": "^malta$",
          "required": "1"
        },
        "landing_company_fullname": {
          "type": "string",
          "pattern": "^Binary \\(Europe\\) Ltd$",
          "required": "1"
        },
        "country": {
          "type": ["string", "null"],
          "required": "1"
        },
        "fullname": {
          "type": "string",
          "pattern": "^Mr Jack Pan$",
          "required": "1"
        },
        "scopes": {
          "type": "array",
          "minItems": 4,
          "items": {
            "type": "string",
            "pattern": "^(admin|payments|read|trade)$"
          },
          "required": "1"
        }
      },
      "required": "1"
    },
    "msg_type": {
        "type": "string",
        "pattern": "^authorize$",
        "required": "1"
    }
  }
}
