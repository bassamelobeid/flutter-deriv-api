{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "msg_type",
      "echo_req"
   ],
   "type" : "object",
   "description" : "Contract update status",
   "title" : "Contract update response",
   "properties" : {
      "req_id" : {
         "type" : "integer",
         "description" : "Optional field send in request to map to response, present only when request contains req_id"
      },
      "echo_req" : {
         "description" : "Echo of the request made",
         "title" : "Echo request"
      },
      "contract_update": {
         "type": "object",
         "description": "contains the update status of the request",
         "properties": {
            "take_profit": {
                "type": ["string","null"],
                "description": "pip-sized take profit value"
            },
            "stop_loss": {
                "type": ["string","null"],
                "description": "pip-sized stop loss value"
            }
         }
      },
      "msg_type" : {
         "description" : "contract_update",
         "type" : "string"
      }
   }
}
