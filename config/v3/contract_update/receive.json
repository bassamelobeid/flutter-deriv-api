{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "msg_type",
      "echo_req"
   ],
   "type" : "object",
   "description" : "Contract update status",
   "title" : "Contract update response",
   "properties" : {
      "req_id" : {
         "type" : "integer",
         "description" : "Optional field send in request to map to response, present only when request contains req_id"
      },
      "echo_req" : {
         "description" : "Echo of the request made",
         "title" : "Echo request"
      },
      "contract_update": {
         "type": "object",
         "description": "contains the update status of the request",
         "properties": {
            "take_profit": {
                "order_date" : {
                    "type": "integer",
                    "description": "take profit order epoch"
                },
                "order_amount" : {
                    "type": "number",
                    "description": "take profit amount"
                },
                "value" : {
                    "type": "string",
                    "description" : "take profit pip-sized barrier value"
                },
                "display_name": {
                    "type": "string",
                    "description": "localized display name"
                }
            },
            "stop_loss": {
                "order_date" : {
                    "type": "integer",
                    "description": "take profit order epoch"
                },
                "order_amount" : {
                    "type": "number",
                    "description": "take profit amount"
                },
                "value" : {
                    "type": "string",
                    "description" : "take profit pip-sized barrier value"
                },
                "display_name": {
                    "type": "string"
                }
            }
         }
      },
      "msg_type" : {
         "description" : "contract_update",
         "type" : "string"
      }
   }
}
