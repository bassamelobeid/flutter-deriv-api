{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "description" : "Update a contract condition.",
   "type" : "object",
   "required" : [
      "contract_id",
      "update_parameters"
   ],
   "additionalProperties" : false,
   "title" : "Contract Update",
   "properties" : {
      "req_id" : {
         "type" : "integer",
         "description" : "[Optional] Used to map request to response."
      },
      "contract_update": {
         "enum": [1]
      },
      "subscribe" : {
         "enum" : [1],
         "description" : "[Optional] 1 - updates and subscribes to proposal_open_contract of the updated contract."
      },
      "contract_id": {
         "description" : "Binary.com internal contract identifier",
         "type" : "integer"
      },
      "update_parameters": {
         "type": "object",
         "description": "contains parameters to update.",
         "additionalProperties" : false,
         "properties": {
            "take_profit": {
                "type": "object",
                "description": "new take profit value for a contract.",
                "properties": {
                    "operation": {
                        "enum": ["update","cancel"],
                        "description": "defines the operation"
                    },
                    "value": {
                        "type": "number",
                        "description": "only defined when it is an update operation"
                    }
                }
            }
         }
      },
      "passthrough" : {
         "type" : "object",
         "description" : "[Optional] Used to pass data through the websocket, which may be retrieved via the echo_req output field."
      }
   }
}
