{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "echo_req": {
            "required": "1"
        },
        "error": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "pattern": "^Sorry\\, an error has occurred\\, Please try accessing our Cashier again\\.$",
                    "required": "1"
                },
                "code": {
                    "type": "string",
                    "pattern": "^CashierForwardError$",
                    "required": "1"
                }
            },
            "required": "1"
        },
        "msg_type":{
            "type": "string",
            "pattern": "^cashier$",
            "required": "1"
        }
    }
}
