{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "echo_req": {
            "required": "1"
        },
        "error": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "pattern": "^Password should be at least six characters\\, including lower and uppercase letters with numbers\\.$",
                    "required": "1"
                },
                "code": {
                    "type": "string",
                    "pattern": "^PasswordError$",
                    "required": "1"
                }
            },
            "required": "1"
        },
        "msg_type":{
            "type": "string",
            "pattern": "^change_password$",
            "required": "1"
        }
    }
}
