{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "echo_req": {
            "required": "1"
        },
        "new_sub_account": {
            "type": "object",
            "properties": {
                "client_id": {
                    "type": "string",
                    "pattern": "^[A-Z]{2,4}\\d{1,8}+$",
                    "required": "1"
                },
                "landing_company": {
                    "type": "string",
                    "pattern": "^Binary",
                    "required": "1"
                },
                "landing_company_shortcode": {
                    "type": "string",
                    "pattern": "[a-z]{1,12}",
                    "required": "1"
                }
            },
            "required": "1"
        },
        "msg_type": {
            "type": "string",
            "pattern": "^new_sub_account",
            "required": "1"
        }
    }
}
