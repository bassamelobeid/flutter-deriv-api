{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Arbitrary Markup",
  "description":"Arbitrary Markup Reporting",
  "properties": {
    "app_register": {
      "type":"integer",
      "pattern": "^1$",
      "description": "Must be 1",
      "required": "1"
    },
    "name":{
      "type": "string",
      "pattern": "^[\\w\\s-]{1,48}$",
      "description": "Application name",
      "required": "1"
    },
    "scopes": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(read|trade|payments|admin)$"
      },
      "required": "1"
    }
  },
  "additionalProperties": false
}
