{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Ping Receive",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made"
    },
    "ping": {
    	"type": "string",
    	"description": "Will return 'pong'",
    	"pattern": "^pong$"
    },
    "msg_type": {
        "type": "string",
        "description": "ping"
    },
    "req_id": {
        "type": "integer",
        "description": "Optional field send in request to map to response if req_id is send in request"
    }
  },
  "required": [
    "echo_req",
    "msg_type"
  ]
}
