{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Trading Platform: Password Change (request)",
    "description": "Change the Trading Platform password",
    "hidden": 1,
    "type": "object",
    "auth_required": 1,
    "auth_scopes": [
        "admin"
    ],
    "additionalProperties": false,
    "required": [
        "trading_platform_password_change",
        "new_password",
        "platform"
    ],
    "properties": {
        "trading_platform_password_change": {
            "description": "Must be `1`",
            "type": "number",
            "enum": [
                1
            ]
        },
        "new_password": {
            "description": "New trading password. Accepts any printable ASCII character. Must be within 8-25 characters, and include numbers, lowercase and uppercase letters. Must not be the same as the user's email address.",
            "type": "string",
            "pattern": "^(?=.*[a-z])(?=.*[0-9])(?=.*[A-Z])[ -~]{8,25}$",
            "sensitive": 1
        },
        "old_password": {
            "description": "Old password for validation. Must be empty if a password has not been set yet.",
            "type": "string",
            "sensitive": 1
        },
        "platform": {
            "description": "Name of trading platform.",
            "type": "string",
            "enum": [
                "dxtrade",
                "mt5"
            ]
        },
        "passthrough": {
            "description": "[Optional] Used to pass data through the websocket, which may be retrieved via the `echo_req` output field.",
            "type": "object"
        },
        "req_id": {
            "description": "[Optional] Used to map request to response.",
            "type": "integer"
        }
    }
}
