{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "new_account_virtual": {
            "type": "object",
            "required": "1",
            "properties": {
                "client_id": {
                    "type": "string",
                    "pattern": "^VRTJ\\d+$",
                    "required": "1"
                },
                "email": {
                    "type": "string",
                    "pattern": "^[_2]$",
                    "required": "1"
                },
                "currency": {
                    "type": "string",
                    "pattern": "^JPY$",
                    "required": "1"
                },
                "balance": {
                    "type": "number",
                    "pattern": "^1000000.0000$",
                    "required": "1"
                },
                "oauth_token": {
                    "type": "string",
                    "required": "1"
                }
            }
        },
        "echo_req": {
            "required": "1"
        },
        "msg_type": {
            "type": "string",
            "pattern": "^new_account_virtual$",
            "required": "1"
        },
        "req_id": {}
    }
}
