{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title":"Create virtual account Send",
  "description": "Create virtual account Send",
  "properties": {
    "email": {
      "type": "string",
      "description": "email address",
      "format": "email"
    },
    "client_password": {
      "type": "string",
      "description": "password",
      "pattern": "^.{5,25}$"
    },
    "residence": {
      "type": "string",
      "description": "value receive from residence_list call, 2-letter country code",
      "pattern": "^[a-z]{2}$"
    },
    "source": {
      "type": "string",
      "description": "app name or referrer URL"
    },
    "latest_environment": {
      "type": "string",
      "description": "specifying IP, country, browser used"
    },
    "myaffiliates_token": {
      "type": "string",
      "description": "affiliate's token"
    },
    "passthrough": {
      "type": "object",
      "description": "Optional field, used to pass data through the websocket, which may be retrieved via the echo_req output field."
    }
  },
  "additionalProperties": false,
  "required": [
    "email",
    "client_password",
    "residence"
  ]
}
