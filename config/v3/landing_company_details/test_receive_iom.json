{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "landing_company_details": {
            "type": "object",
            "required": 1,
            "properties": {
                "shortcode": {
                    "type": "string",
                    "pattern": "^[_1]$",
                    "required": 1
                },
                "name": {
                    "type": "string",
                    "pattern": "^Binary \\(IOM\\) Ltd$",
                    "required": 1
                },
                "address": {
                    "type": ["array", "null"],
                    "items": {
                        "type": "string"
                    }
                },
                "country": {
                    "type": "string",
                    "pattern": "^Isle of Man$",
                    "required": 1
                },
                "legal_default_currency": {
                    "type": "string",
                    "pattern": "^GBP$",
                    "required": 1
                },
                "legal_allowed_currencies": {
                    "type": "array",
                    "minItems": 2,
                    "required": 1,
                    "items": {
                        "type": "string",
                        "pattern": "^(USD|GBP)$",
                        "required": 1
                    }
                },
                "legal_allowed_markets": {
                    "type": "array",
                    "minItems": 6,
                    "required": 1,
                    "items": {
                        "type": "string",
                        "pattern": "^(commodities|forex|indices|stocks|smarties|volidx)$",
                        "required": 1
                    }
                },
                "legal_allowed_contract_categories": {
                    "type": "array",
                    "minItems": 7,
                    "required": 1,
                    "items": {
                        "type": "string",
                        "pattern": "^(asian|callput|digits|endsinout|staysinout|touchnotouch|spreads)$",
                        "required": 1
                    }
                },
                "has_reality_check": {
                    "type": "integer",
                    "pattern": "^1$",
                    "required": 1
                }
            }
        },
        "echo_req": {
            "required": 1
        },
        "msg_type": {
            "type": "string",
            "pattern": "^landing_company_details$",
            "required": 1
        }
    }
}
