{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Landing Company Receive",
  "description": "A message with Landing Company",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made"
    },
    "landing_company_details": {
      "type": "object",
      "title": "Landing Company Structure",
      "properties":{
        "shortcode":{
          "type":"string"
        },
        "name":{
          "type":"string"
        },
        "address":{
          "type": ["array", "null"],
          "items":{
            "type":"string"
          }
        },
        "country":{
          "type":"string"
        },
        "legal_default_currency":{
          "type":"string"
        },
        "legal_allowed_currencies":{
          "type":"array",
          "items":{
            "type":"string"
          }
        },
        "legal_allowed_markets":{
          "type":"array",
          "items":{
            "type":"string"
          }
        },
        "legal_allowed_contract_categories":{
          "type":"array",
          "items":{
            "type":"string"
          }
        },
        "has_reality_check": {
          "type": "integer",
          "description": "Flag to indicate whether reality check is applicable for this landing company. 1: applicable, 0: not applicable. The Reality Check is a feature that gives a summary of the client's trades and account balances on a regular basis throughout his session.",
          "pattern": "^(1|0)$"
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description": "landing_company_details"
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  },
  "required": [
    "echo_req",
    "landing_company_details",
    "msg_type"
  ]
}
