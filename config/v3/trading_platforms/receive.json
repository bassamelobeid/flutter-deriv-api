{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Trading Platforms (response)",
    "description": "Returns the complete Trading Platforms configuration.",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "trading_platforms": {
            "title": "trading_platforms",
            "description": "Trading Platforms Configuration",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "contract_for_difference",
                "options"
            ],
            "patternProperties": {
                "^[a-z_0-9]+$": {
                    "description": "Trading category. For example, options, cfds",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "available_platforms",
                        "products",
                        "shortcode"
                    ],
                    "properties": {
                        "available_platforms": {
                            "description": "Available Platforms",
                            "type": "object",
                            "additionalProperties": false,
                            "patternProperties": {
                                "^[a-z_0-9]+$": {
                                    "description": "Available Platforms",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "description",
                                        "display_name"
                                    ],
                                    "properties": {
                                        "description": {
                                            "description": "Description of the Platform",
                                            "type": "string"
                                        },
                                        "display_name": {
                                            "description": "Display name of the Platform",
                                            "type": "string"
                                        },
                                        "legacy": {
                                            "description": "[Optional] Flag to determine whether the Platform is legacy",
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        },
                        "markets": {
                            "description": "Markets",
                            "type": "object",
                            "patternProperties": {
                                "^[a-z_0-9]+$": {
                                    "description": "Markets",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "description",
                                        "display_name"
                                    ],
                                    "properties": {
                                        "description": {
                                            "description": "Market description",
                                            "type": "string"
                                        },
                                        "display_name": {
                                            "description": "Display name of this Market",
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "products": {
                            "description": "Available Products",
                            "type": "object",
                            "patternProperties": {
                                "^[a-z_0-9]+$": {
                                    "description": "Available Products",
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "display_name",
                                        "supported_platforms"
                                    ],
                                    "properties": {
                                        "description": {
                                            "description": "[Optional] Product description",
                                            "type": "string"
                                        },
                                        "display_name": {
                                            "description": "Display name of the Product",
                                            "type": "string"
                                        },
                                        "supported_platforms": {
                                            "description": "Supported Platforms",
                                            "type": "object",
                                            "additionalProperties": false,
                                            "patternProperties": {
                                                "^[a-z_0-9]+$": {
                                                    "description": "Supported platform configuration",
                                                    "type": "object"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "shortcode": {
                            "description": "Shortcode for the platform category",
                            "type": "string"
                        }
                    }
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "trading_platforms"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
