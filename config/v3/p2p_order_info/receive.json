{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Order Information (response)",
    "description": "Information of the P2P order.",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "p2p_order_info": {
            "title": "p2p_order_info",
            "description": "The information of P2P order.",
            "type": "object",
            "properties": {
                "type": {
                    "description": "Whether this is a buy or a sell.",
                    "type": "string",
                    "enum": [
                        "buy",
                        "sell"
                    ]
                },
                "account_currency": {
                    "description": "The currency of order.",
                    "type": "string",
                    "pattern": "^[a-zA-Z]{3,}$",
                    "examples": [
                        "USD"
                    ]
                },
                "agent_id": {
                    "description": "The agent's unique identifier.",
                    "type": "string"
                },
                "agent_name": {
                    "description": "The agent's displayed name.",
                    "type": "string"
                },
                "amount": {
                    "description": "The amount of the order.",
                    "type": "number"
                },
                "amount_display": {
                    "description": "The amount of the order, formatted to appropriate decimal places.",
                    "type": "string"
                },
                "created_time": {
                    "description": "The epoch time of the order creation.",
                    "type": "integer"
                },
                "expiry_time": {
                    "description": "The epoch time in which the order will be expired.",
                    "type": "integer"
                },
                "local_currency": {
                    "description": "Local currency for this order.",
                    "type": "string",
                    "pattern": "^[a-zA-Z]{3,}$",
                    "examples": [
                        "USD"
                    ]
                },
                "offer_description": {
                    "description": "Notes from the agent. Should include contact details and payment instructions.",
                    "type": "string",
                    "pattern": "^[\\p{L}\\p{Nd}\\s'.,:;()@#/-]{1,500}$"
                },
                "offer_id": {
                    "description": "The unique identifier for the offer.",
                    "type": "string"
                },
                "order_description": {
                    "description": "Notes from the client.",
                    "type": "string",
                    "pattern": "^[\\p{L}\\p{Nd}\\s'.,:;()@#/-]{0,500}$"
                },
                "order_id": {
                    "description": "The unique identifier for this order.",
                    "type": "string"
                },
                "price": {
                    "description": "Cost in local currency.",
                    "type": "number"
                },
                "price_display": {
                    "description": "Cost in local currency, formatted to appropriate decimal places.",
                    "type": "string"
                },
                "rate": {
                    "description": "Conversion rate of the order.",
                    "type": "number"
                },
                "rate_display": {
                    "description": "Conversion rate of the order, formatted to appropriate decimal places.",
                    "type": "string"
                },
                "status": {
                    "description": "Current order status.",
                    "type": "string",
                    "enum": [
                        "pending",
                        "buyer-confirmed",
                        "cancelled",
                        "timed-out",
                        "refunded",
                        "completed"
                    ]
                }
            }
        },
        "subscription": {
            "title": "Subscription information",
            "description": "For subscription requests only",
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "description": "A per-connection unique identifier. Can be passed to the forget API call to unsubscribe.",
                    "type": "string"
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "p2p_order_info"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
