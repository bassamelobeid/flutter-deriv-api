{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "echo_req": {},
        "trading_times": {
            "type": "object",
            "properties": {
                "markets": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "submarkets": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "symbols": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "events": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "object",
                                                            "properties": {
                                                                "dates": {
                                                                    "type": "string"
                                                                },
                                                                "descrip": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        }
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "settlement": {
                                                        "type": "string"
                                                    },
                                                    "symbol": {
                                                        "type": "string"
                                                    },
                                                    "times": {
                                                        "type": "object",
                                                        "properties": {
                                                            "open": {
                                                                "type": "array",
                                                                "items": {
                                                                    "type": "string"
                                                                }
                                                            },
                                                            "close": {
                                                                "type": "array",
                                                                "items": {
                                                                    "type": "string"
                                                                }
                                                            },
                                                            "settlement": {
                                                                "type": "string"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "msg_type": {
            "type": "string",
            "pattern": "^trading_times$"
        }
    },
    "required": [
        "echo_req",
        "msg_type",
        "trading_times"
    ]
}
