{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Set Self-Exclusion Send",
  "description":"Set Self-Exclusion (this call should be used in conjunction with get_self_exclusion)",
  "properties": {
    "set_self_exclusion": {
      "type":"integer",
      "pattern": "^1$"
    },
    "max_balance":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "Maximum account cash balance"
    },
    "max_turnover":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "Daily turnover limit"
    },
    "max_losses":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "Daily limit on losses"
    },
    "max_7day_turnover":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "7-day turnover limit"
    },
    "max_7day_losses":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "7-day limit on losses"
    },
    "max_30day_turnover":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "30-day turnover limit"
    },
    "max_30day_losses":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,20}$",
      "description": "30-day limit on losses"
    },
    "max_open_bets":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,4}$",
      "description": "Maximum number of open positions"
    },
    "session_duration_limit":{
      "type": ["integer", "null"],
      "pattern": "^\\d{0,5}$",
      "description": "Session duration limit, in minutes"
    },
    "exclude_until":{
      "type": ["string", "null"],
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Exclude me from the website until"
    },
    "passthrough": {
      "type": "object",
      "description": "Optional field, used to pass data through the websocket, which may be retrieved via the echo_req output field."
    }
  },
  "additionalProperties": false,
  "required": [
    "set_self_exclusion"
  ]
}
