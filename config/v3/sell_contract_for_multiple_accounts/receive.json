{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Sell Multiply Contract Receive",
  "description": "A message with transaction results is received",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made",
      "required": 1
    },
    "sell_contract_for_multiple_accounts": {
      "type": "object",
      "title": "Receipt confirmation",
      "description": "Receipt confirmation for the purchase",
      "additionalProperties": false,
      "properties": {
        "result": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "title": "Receipt for the transaction",
                "description": "Receipt for the transaction",
                "additionalProperties": false,
                "properties": {
                  "balance_after": {
                    "type": "number",
                    "description":"New account balance after completion of the sale",
                    "required": "1"
                  },
                  "contract_shortcode": {
                    "type": "string",
                    "description":"Internal contract code for the sold contract",
                    "required": "1"
                  },
                  "sold_for": {
                    "type": "number",
                    "description": "Actual effected sale price",
                    "required": "1"
                  },
                  "transaction_id": {
                    "type": "integer",
                    "description":"Internal transaction identifier for the sale transaction",
                    "required": "1"
                  }
                }
              },
              {
                "type": "object",
                "description": "Error message",
                "additionalProperties": false,
                "properties": {
                  "token": {
                    "type": "string",
                    "description":"The token designating the account",
                    "required": "1"
                  },
                  "code": {
                    "type": "string",
                    "description":"An error code",
                    "required": "1"
                  },
                  "message_to_client": {
                    "type": "string",
                    "description":"An error message localized according to the websocket",
                    "required": "1"
                  }
                }
              }
            ]
          }
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description":"sell",
      "required": 1
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  },
  "required": [
    "echo_req",
    "buy_contract_for_multiple_accounts",
    "msg_type"
  ]
}
