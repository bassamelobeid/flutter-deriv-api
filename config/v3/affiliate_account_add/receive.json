{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Affiliate: Register (response)",
    "description": "A message with created affiliate details",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "affiliate_account_add": {
            "title": "affiliate_account_add",
            "description": "The information of the created affiliate user.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "address_city",
                "address_line_1",
                "address_postcode",
                "address_state",
                "affiliate_id",
                "country",
                "first_name",
                "last_name",
                "non_pep_declaration",
                "phone",
                "tnc_accepted",
                "username"
            ],
            "properties": {
                "address_city": {
                    "description": "City name",
                    "type": "string"
                },
                "address_line_1": {
                    "description": "First line of address.",
                    "type": "string"
                },
                "address_line_2": {
                    "description": "Second line of address.",
                    "type": "string"
                },
                "address_postcode": {
                    "description": "Postal code of the address.",
                    "type": "string"
                },
                "address_state": {
                    "description": "State / Region of the address.",
                    "type": "string"
                },
                "affiliate_id": {
                    "description": "Affiliate ID from CellXperts for the created affiliate",
                    "type": "string"
                },
                "country": {
                    "description": "Registered country of the created affiliate.",
                    "type": "string"
                },
                "first_name": {
                    "description": "First name of the created affiliate.",
                    "type": "string"
                },
                "last_name": {
                    "description": "Last name of the created affiliate",
                    "type": "string"
                },
                "non_pep_declaration": {
                    "description": "PEP declaration status of the created affiliate.",
                    "type": "integer",
                    "enum": [
                        0,
                        1
                    ]
                },
                "phone": {
                    "description": "Registered phone number of the created affiliate.",
                    "type": "string"
                },
                "tnc_accepted": {
                    "description": "Terms and conditions acceptance status of the created affiliate.",
                    "type": "integer",
                    "enum": [
                        0,
                        1
                    ]
                },
                "username": {
                    "description": "Username of the created affiliate.",
                    "type": "string"
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "affiliate_account_add"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
