{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Affiliate: Register (response)",
    "description": "A message with affiliate user trying to register details",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "affiliate_account_add": {
            "title": "affiliate_account_add",
            "description": "The information of the affiliate user trying to register.",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "demo",
                "real"
            ],
            "properties": {
                "address_line_1": {
                    "description": "First line of address.",
                    "type": "string"
                },
                "address_line_2": {
                    "description": "Second line of address.",
                    "type": "string"
                },
                "address_postcode": {
                    "description": "Postal code of the address.",
                    "type": "string"
                },
                "address_state": {
                    "description": "State / Region of the address.",
                    "type": "string"
                },
                "affiliate_id": {
                    "description": "Affiliate ID from CellXperts for the created affiliate",
                    "type": "string"
                },
                "country": {
                    "description": "Registered country of the created affiliate.",
                    "type": "string"
                },
                "date_of_birth": {
                    "description": "Birth date of user trying to register",
                    "type": "string"
                },
                "demo": {
                    "description": "Demo(VRTC) created account details",
                    "type": "object"
                },
                "first_name": {
                    "description": "First name of the created affiliate.",
                    "type": "string",
                    "sensitive": 1
                },
                "last_name": {
                    "description": "Last name of the created affiliate",
                    "type": "string",
                    "sensitive": 1
                },
                "non_pep_declaration": {
                    "description": "PEP declaration status of the created affiliate.",
                    "type": "integer",
                    "enum": [
                        0,
                        1
                    ]
                },
                "phone": {
                    "description": "Registered phone number of the created affiliate.",
                    "type": "string",
                    "sensitive": 1
                },
                "real": {
                    "description": "Real created account details",
                    "type": "object"
                },
                "tnc_accepted": {
                    "description": "Terms and conditions acceptance status of the created affiliate.",
                    "type": "integer",
                    "enum": [
                        0,
                        1
                    ]
                },
                "verification_code": {
                    "description": "Email verification code (received from a `verify_email` call, which must be done first).",
                    "type": "string",
                    "pattern": "^\\w{8,128}$"
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "affiliate_account_add"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
