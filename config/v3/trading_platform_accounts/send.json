{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Trading Platform: Accounts List (request)",
    "description": "Get list of Trading Platform accounts for client",
    "hidden": 1,
    "type": "object",
    "auth_required": 1,
    "auth_scopes": [
        "read"
    ],
    "additionalProperties": false,
    "required": [
        "trading_platform_accounts",
        "platform"
    ],
    "properties": {
        "trading_platform_accounts": {
            "description": "Must be `1`",
            "type": "integer",
            "enum": [
                1
            ]
        },
        "platform": {
            "description": "Trading platform name",
            "type": "string",
            "enum": [
                "dxtrade",
                "mt5",
                "derivez",
                "ctrader"
            ]
        },
        "passthrough": {
            "description": "[Optional] Used to pass data through the websocket, which may be retrieved via the `echo_req` output field. Maximum size is 3500 bytes.",
            "type": "object",
            "maxSize": 3500
        },
        "req_id": {
            "description": "[Optional] Used to map request to response.",
            "type": "integer"
        }
    }
}
