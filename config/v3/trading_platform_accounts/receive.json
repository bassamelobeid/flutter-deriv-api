{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Trading Platform: Accounts List (response)",
    "description": "Get list of Trading Platform accounts for client.",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "trading_platform_accounts": {
            "title": "trading_platform_accounts",
            "description": "Array containing Trading account objects.",
            "type": "array",
            "items": {
                "title": "Details of each Trading account.",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "account_id": {
                        "description": "ID of Trading account.",
                        "type": "string"
                    },
                    "account_type": {
                        "description": "Account type.",
                        "type": "string",
                        "enum": [
                            "demo",
                            "real"
                        ]
                    },
                    "balance": {
                        "description": "Balance of the Trading account.",
                        "type": "number"
                    },
                    "currency": {
                        "description": "Currency of the Trading account.",
                        "type": "string"
                    },
                    "display_balance": {
                        "description": "Account balance, formatted to appropriate decimal places.",
                        "type": "string"
                    },
                    "landing_company_short": {
                        "description": "Landing company shortcode of the Trading account.",
                        "type": "string",
                        "enum": [
                            "bvi",
                            "labuan",
                            "malta",
                            "maltainvest",
                            "svg",
                            "vanuatu",
                            "seychelles"
                        ]
                    },
                    "login": {
                        "description": "Login name used to log in into Trading platform",
                        "type": "string"
                    },
                    "market_type": {
                        "description": "Market type",
                        "type": "string",
                        "enum": [
                            "financial",
                            "synthetic"
                        ]
                    },
                    "platform": {
                        "description": "Name of trading platform.",
                        "type": "string",
                        "enum": [
                            "dxtrade"
                        ]
                    },
                    "sub_account_type": {
                        "description": "Sub account type",
                        "type": "string",
                        "enum": [
                            "financial",
                            "financial_stp"
                        ]
                    }
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "trading_platform_accounts"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
