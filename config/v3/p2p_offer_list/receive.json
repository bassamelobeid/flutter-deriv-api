{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Offers List (response)",
    "description": "All offers matching the requested criteria",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "p2p_offer_list": {
            "title": "p2p_offer_list",
            "description": "P2P offer list",
            "type": "object",
            "required": [
                "list"
            ],
            "properties": {
                "list": {
                    "description": "List of offers.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "description": {
                                "description": "Notes from the agent. Should include contact details and payment instructions.",
                                "type": "string",
                                "pattern": "^[\\p{L}\\p{Nd}\\s'.,:;()@#/-]{1,500}$"
                            },
                            "agent_id": {
                                "description": "The agent's unique identifier.",
                                "type": "string"
                            },
                            "agent_name": {
                                "description": "The agent's displayed name.",
                                "type": "string"
                            },
                            "currency": {
                                "description": "Local currency for this offer.",
                                "type": "string"
                            },
                            "max": {
                                "description": "Maximum amount, in local currency.",
                                "type": "number"
                            },
                            "min": {
                                "description": "Minimum amount, in local currency.",
                                "type": "number"
                            },
                            "offer_id": {
                                "description": "The unique identifier for this offer.",
                                "type": "string"
                            },
                            "price": {
                                "description": "Cost in local currency.",
                                "type": "number"
                            }
                        }
                    }
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "p2p_offer_list"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
