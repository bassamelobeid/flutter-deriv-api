{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Cancel Incoming Streams Based on Type Receive",
  "properties": {
    "echo_req": {
      "title": "Echo request",
      "description": "Echo of the request made"
    },
    "forget_all": {
    	"type": "array",
    	"description": "Ids of the cancelled streams"
    },
    "msg_type": {
        "type": "string",
        "description": "forget_all"
    },
    "req_id": {
        "type": "integer",
        "description": "Optional field send in request to map to response if req_id is send in request"
    }
  },
  "required": [
    "echo_req",
    "msg_type"
  ]
}
