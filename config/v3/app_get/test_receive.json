{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "echo_req": {
        "required": "1"
    },
    "app_get": {
      "type": "object",
      "properties": {
          "name": {
            "type": "string",
            "pattern": "^Test Application$",
            "required": "1"
          },
          "app_id": {
            "type": "integer",
            "pattern": "^[_1]$",
            "required": "1"
          },
          "scopes": {
            "type": "array",
            "minItem": 2,
            "maxItem": 2,
            "items": {
              "type": "string",
              "pattern": "^(read|trade)$"
            },
            "required": "1"
          },
          "redirect_uri": {
            "type": "string",
            "pattern": "^https\\:\/\/test\\.example\\.com\/redirect$",
            "required": "1"
          },
          "homepage": {
            "type": "string",
            "pattern": "^https\\:\/\/test\\.example\\.com\/$",
            "required": "1"
          },
          "github": {
            "type": "string",
            "pattern": "^https\\:\/\/github\\.com\/test_org\/app$",
            "required": "1"
          },
          "appstore": {
            "type": "string",
            "pattern": "^https\\:\/\/itunes\\.apple\\.com\/test_app$",
            "required": "1"
          },
          "googleplay": {
            "type": "string",
            "pattern": "^https\\:\/\/play\\.google\\.com\/test_app$",
            "required": "1"
          },
          "app_markup_percentage": {
            "type": "number",
            "pattern": "^1.5$",
            "required": "1"
          }
      }
    },
    "msg_type": {
      "type": "string",
      "pattern": "^app_get$",
      "required": "1"
    }
  }
}
