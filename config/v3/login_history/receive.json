{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "type":"object",
  "title":"Login History Response",
  "description":"Recent login logout history records",
  "properties":{
    "echo_req":{
      "title":"Echo request",
      "description":"Echo of the request made"
    },
    "login_history":{
        "type":"array",
        "title":"list of details of login activity",
        "description":"User login history",
        "items":{
          "type":"object",
          "properties":{
            "time":{
              "type":"integer",
              "description": "Epoch time of the activity"
            },
            "action":{
              "type":"string",
              "description":"It is the type of action Example: login, logout"
            },
            "environment":{
              "type":"string",
              "description":"Provide details about browser, device used during login or logout"
            },
            "shortcode": {
              "type": "integer",
              "pattern": "^(1|0)$",
              "description": "Status of activity: 1 - success, 0 - failure"
            }
          }
        },
        "description":"Array of login logout activities"
    },
    "msg_type":{
      "type":"string",
      "description":"login_history"
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  },
  "required":[
    "echo_req",
    "msg_type"
  ]
}
