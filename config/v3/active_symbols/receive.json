{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Active Symbols Response",
  "description": "A message containing the list of active symbols.",
  "properties": {
    "echo_req": {
      "title": "Echo request",
      "description": "Echo of the request made.",
      "required": 1
    },
    "active_symbols": {
      "type": "array",
      "title": "Active symbols",
      "description": "List of active symbols.",
      "items": {
        "type": "object",
        "properties": {
          "allow_forward_starting": {
            "type": "integer",
            "description": "1 if the symbol is tradable in a forward starting contract, 0 if not."
          },
          "display_name": {
            "type": "string",
            "description": "Display name.",
            "required": "1"
          },
          "exchange_is_open": {
            "type": "integer",
            "description": "1 if market is currently open, 0 if closed.",
            "required": "1"
          },
          "symbol": {
            "type": "string",
            "description": "Binary.com symbol code for this underlying.",
            "required": "1"
          },
          "intraday_interval_minutes": {
            "type": "integer",
            "description": "Intraday interval minutes."
          },
          "symbol_type": {
            "type": "string",
            "description": "Symbol type (forex, commodities, etc).",
            "required": "1"
          },
          "exchange_name": {
            "type": "string",
            "description": "Exchange name (for underlyings listed on a Stock Exchange)."
          },
          "delay_amount": {
            "type": "integer",
            "description": "Amount the data feed is delayed (in minutes) due to Exchange licensing requirements."
          },
          "spot": {
            "type": [
              "number",
              "null"
            ],
            "description": "Latest spot price of the underlying."
          },
          "spot_time": {
            "type": "string",
            "description": "Latest spot epoch time."
          },
          "is_trading_suspended": {
            "type": "integer",
            "description": "1 indicates that trading is currently suspended.",
            "required": "1"
          },
          "quoted_currency_symbol": {
            "type": "string",
            "description": "For stocks and stock indices, the underlying currency for that instrument."
          },
          "spot_age": {
            "type": "string",
            "description": "Number of seconds elapsed since the last spot price."
          },
          "market": {
            "type": "string",
            "description": "Market category (forex, indices etc).",
            "required": "1"
          },
          "market_display_name": {
            "type": "string",
            "description": "Translated market name.",
            "required": "1"
          },
          "submarket": {
            "type": "string",
            "description": "Submarket name.",
            "required": "1"
          },
          "submarket_display_name": {
            "type": "string",
            "description": "Translated submarket name.",
            "required": "1"
          },
          "pip": {
            "type": "number",
            "description": "Pip size (i.e. minimum fluctuation amount).",
            "required": "1"
          }
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description": "active_symbols.",
      "required": 1
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id."
    }
  }
}
