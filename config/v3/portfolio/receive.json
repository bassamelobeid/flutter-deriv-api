{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Portfolio Receive",
  "description": "Receive a list of outstanding options in the user's portfolio",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made",
      "required": 1
    },
    "portfolio": {
      "type": "object",
      "title": "Portfolio",
      "description": "Client open positions",
      "properties": {
        "contracts": {
          "type": "array",
          "title": "Contracts",
          "description": "Client open positions",
          "required": 1,
          "items":{
            "type":"object",
            "title": "Portfolio",
            "description": "Client open positions",
            "properties":{
              "contract_id": {
                "type": "integer",
                "description": "Binary.com internal contract identifier number (to be used in a Price Proposal - Open Contract API call)"
              },
              "transaction_id":{
                "type":"integer",
                "description":"It is the transaction id. Every contract (buy or sell) and every payment has a unique id. Example: 10867502908"
              },
              "purchase_time": {
                "type": "integer",
                "description": "Epoch of purchase time"
              },
              "symbol": {
                "type": "string",
                "description": "Symbol code"
              },
              "payout": {
                "type": "number",
                "description": "Payout price"
              },
              "buy_price": {
                "type": "number",
                "description": "Buy price"
              },
              "date_start": {
                "type": "integer",
                "description": "Epoch of start date"
              },
              "expiry_time": {
                "type": "integer",
                "description": "Epoch of expiry time"
              },
              "contract_type": {
                "type": "string",
                "description": "Contract type"
              },
              "currency": {
                "type": "string",
                "description": "Contract currency"
              },
              "longcode": {
                "type": "string",
                "description": "Contract description"
              },
              "app_id": {
                "type": ["integer", "null"],
                "description": "Id of an app from where this contract was purchased. For example, it's 1 for binary.com."
              },
              "app_name": {
                "type": ["string", "null"],
                "description": "Name of the app corresponding to the app_id from where this contract was purchased. For example, it's binary.com for app_id 1."
              }
            }
          }
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description": "portfolio",
      "required": 1
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  }
}
