{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "P2P Agent Information (response)",
    "description": "Returns information about the given agent ID",
    "type": "object",
    "required": [
        "echo_req",
        "msg_type"
    ],
    "properties": {
        "p2p_agent_info": {
            "title": "p2p_agent_info",
            "description": "P2P agent info",
            "type": "object",
            "properties": {
                "agent_id": {
                    "description": "The agent's identification number.",
                    "type": "string"
                },
                "agent_name": {
                    "description": "The agent's displayed name.",
                    "type": "string"
                },
                "client_loginid": {
                    "description": "The loginid of the agent.",
                    "type": "string",
                    "examples": [
                        "CR12345"
                    ]
                },
                "created_time": {
                    "description": "The epoch time that the client became an agent.",
                    "type": "integer"
                },
                "is_active": {
                    "description": "The activation status of the agent.",
                    "type": "number",
                    "enum": [
                        0,
                        1
                    ]
                },
                "is_authenticated": {
                    "description": "The authentication status of the agent.",
                    "type": "number",
                    "enum": [
                        0,
                        1
                    ]
                }
            }
        },
        "echo_req": {
            "description": "Echo of the request made.",
            "type": "object"
        },
        "msg_type": {
            "description": "Action name of the request made.",
            "type": "string",
            "enum": [
                "p2p_agent_info"
            ]
        },
        "req_id": {
            "description": "Optional field sent in request to map to response, present only when request contains `req_id`.",
            "type": "integer"
        }
    }
}
