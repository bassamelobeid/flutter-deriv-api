{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Balance Receive",
  "description": "A message with user balance is received",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made"
    },
    "balance": {
      "type": "array",
      "items":{
        "type":"object",
        "properties": {
          "balance": {
            "type": "number",
            "description": "Balance amount"
          },
          "currency": {
            "type": "string",
            "description": "Currency Example: USD"
          },
          "loginid": {
            "type": "string",
            "description": "Client loginid Example: CR000000"
          }
        }

      }
    },
    "msg_type": {
        "type": "string",
        "description": "balance"
      }
  },
  "required": [
    "echo_req",
    "msg_type"
  ]
}
