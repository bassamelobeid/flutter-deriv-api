{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Portfolio Receive",
  "description": "For each portfolio entry, an initial message will provide information about that contract.",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made"
    },
    "portfolio": {
      "type": "array",
      "title": "Portfolio",
      "description": "Client open positions",
      "items":{
        "type":"object",
        "properties":{
          "id": {
            "type": "string",
            "description": "Streaming ID"
          },
          "fmb_id": {
            "type": "integer",
            "description": "Contract ID"
          },
          "purchase_time": {
            "type": "integer",
            "description": "Epoch of purchase time"
          },
          "symbol": {
            "type": "string",
            "description": "Symbol"
          },
          "payout": {
            "type": "number",
            "description": "Payout price"
          },
          "buy_price": {
            "type": "number",
            "description": "Buy price"
          },
          "date_start": {
            "type": "integer",
            "description": "Epoch of start date"
          },
          "expiry_time": {
            "type": "integer",
            "description": "Epoch of expiry time"
          },
          "contract_type": {
            "type": "string",
            "description": "Contract type"
          },
          "currency": {
            "type": "string",
            "description": "Currency"
          },
          "longcode": {
            "type": "string",
            "description": "Contract description"
          }
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description": "portfolio"
    }
  },
  "required": [
    "echo_req",
    "portfolio",
    "msg_type"
  ]
}