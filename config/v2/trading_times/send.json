{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Trading Times Send",
  "description":"Receive a list of marketing opening times for a given date",
  "properties": {
    "trading_times": {
      "type":"object",
      "properties":{
        "date": {
           "type": "string",
                "description": "Trading date in yyyy-mm-dd format.",
                "sample":{"date": "2015-01-01"}
        }
      },
      "required": [
         "times"
      ]
    }
  },
  "required": [
    "trading_times"
  ]
}
