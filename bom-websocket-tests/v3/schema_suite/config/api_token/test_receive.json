{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "echo_req",
      "msg_type"
   ],
   "description" : null,
   "additionalProperties" : null,
   "title" : null,
   "type" : "object",
   "properties" : {
      "echo_req" : {},
      "msg_type" : {
         "pattern" : "^api_token$",
         "type" : "string"
      },
      "api_token" : {
         "required" : [
            "tokens"
         ],
         "type" : "object",
         "properties" : {
            "tokens" : {
               "type" : "array",
               "items" : {
                  "type" : "object",
                  "required": ["token", "last_used", "scopes", "display_name"], 
                  "properties" : {
                     "display_name" : {
                        "pattern" : "^test$",
                        "type" : "string"
                     },
                     "scopes" : {
                        "minItems" : 4,
                        "items" : {
                           "type" : "string",
                           "pattern" : "^(read|trade|payments|admin)$"
                        }
                     },
                     "last_used" : {
                        "type" : [
                           "string",
                           "null"
                        ],
                        "pattern" : "^(\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2})?$"
                     },
                     "token" : {
                        "type" : "string",
                        "pattern" : "^[_1]$"
                     }
                  }
               }
            }
         }
      }
   }
}
