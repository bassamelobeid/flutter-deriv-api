{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "landing_company_fullname",
      "currency",
      "balance",
      "is_virtual",
      "email",
      "loginid",
      "fullname",
      "landing_company_name",
      "country",
      "scopes",
      "stash",
      "account_list",
      "upgradeable_landing_companies",
      "user_id",
      "local_currencies"
   ],
   "additionalProperties" : false,
   "title" : null,
   "type" : "object",
   "description" : null,
   "properties" : {
      "loginid" : {
         "pattern" : "^MLT\\d+$",
         "type" : "string"
      },
      "user_id" : {
         "type" : "string",
         "pattern" : "^[0-9]+$"
      },
      "landing_company_name" : {
         "type" : "string",
         "pattern" : "^malta$"
      },
      "local_currencies": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
              "^[A-Z]{3,4}$": {
                  "type": "object",
                  "required": [
                      "fractional_digits"
                  ],
                  "properties": {
                      "fractional_digits": {
                          "type": "number"
                      }
                  }
              }
          }
      },
      "account_list" : {
         "type" : "array",
         "description" : "List of accounts for current user.",
         "items" : {
            "additionalProperties" : false,
            "type" : "object",
            "required" : [
               "is_virtual",
               "currency",
               "loginid",
               "is_disabled",
               "landing_company_name"
            ],
            "properties" : {
               "is_virtual" : {
                  "type" : "integer",
                  "description" : "Boolean value: 1 or 0, indicating whether the account is a virtual-money account.",
                  "enum" : [
                     0,
                     1
                  ]
               },
               "loginid" : {
                  "type" : "string",
                  "description" : "The account id of specified account."
               },
               "is_disabled" : {
                  "enum" : [
                     0,
                     1
                  ],
                  "description" : "Boolean value: 1 or 0, indicating whether the account is marked as disabled or not.",
                  "type" : "integer"
               },
               "currency" : {
                  "description" : "Currency of specified account.",
                  "type" : "string"
               },
               "landing_company_name" : {
                  "description" : "Landing company shortcode the account belongs to.",
                  "type" : "string"
               }
            }
         }
      },
      "stash" : {
         "type" : "object"
      },
      "scopes" : {
         "type" : "array",
         "items" : {
            "type" : "string",
            "pattern" : "^(admin|payments|read|trade)$"
         },
         "minItems" : 4
      },
      "is_virtual" : {
         "type" : "integer",
         "enum" : [
            0
         ]
      },
      "country" : {
         "type" : "string",
         "pattern" : "^[_2]$"
      },
      "currency" : {
         "type" : "string",
         "pattern" : "^$"
      },
      "fullname" : {
         "type" : "string",
         "pattern" : "^Mrs Example First Name MLT Example Last Name$"
      },
      "email" : {
         "type" : "string",
         "pattern" : "^[_3]$"
      },
      "landing_company_fullname" : {
         "pattern" : "^Binary \\(Europe\\) Ltd$",
         "type" : "string"
      },
      "balance" : {
         "type" : "string",
         "pattern" : "^0.00$"
      },
      "upgradeable_landing_companies" : {
         "type" : "array"
      }
   }
}
