{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "description" : null,
   "type" : "object",
   "title" : null,
   "additionalProperties" : false,
   "required" : [
      "status",
      "stash",
      "risk_classification",
      "prompt_client_to_authenticate",
      "authentication"
   ],
   "properties" : {
      "stash" : {
         "type" : "object"
      },
      "risk_classification" : {
         "pattern" : "^(low|standard|high)?$",
         "type" : [
            "string",
            "null"
         ]
      },
      "prompt_client_to_authenticate" : {
         "enum" : [
            0,
            1
         ],
         "type" : "integer"
      },
      "status" : {
         "type" : "array"
      },
      "authentication" : {
         "type" : "object",
         "required": [
             "needs_verification",
             "document",
             "identity"
         ],
         "properties" : {
             "needs_verification" : {
                 "type" : "array"
             },
             "document" : {
                 "type" : "object",
                 "properties" : {
                     "status" : {
                         "type" : "string",
                         "enum": [
                            "none",
                            "pending",
                            "rejected",
                            "verified",
                            "expired"
                        ]
                     },
                     "expiry_date" : {
                         "type" : "integer"
                     }
                 }
             },
             "identity" : {
                 "type" : "object",
                 "properties" : {
                     "status" : {
                         "type" : "string",
                         "enum": [
                            "none",
                            "pending",
                            "rejected",
                            "verified",
                            "expired"
                        ]
                     },
                     "expiry_date" : {
                         "type" : "integer"
                     }
                 }
             }
         }
      }
   }
}
