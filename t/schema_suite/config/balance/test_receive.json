{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "currency": {
            "type": "string",
            "required": "1",
            "pattern": "^(|[A-Z]{3})$"
        },
        "balance": {
            "type": "number",
            "required": "1",
            "pattern": "^([.0-9]{1,25})$"
        },
        "loginid": {
            "type": "string",
            "required": "1",
            "pattern": "^[A-Z]{2,4}[0-9]{1,10}$"
        }
    }
}
