{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "additionalProperties" : false,
   "title" : null,
   "description" : null,
   "type" : "object",
   "required" : [
      "loginid",
      "currency",
      "stash",
      "balance"
   ],
   "properties" : {
      "stash" : {
         "type" : "object"
      },
      "balance" : {
         "pattern" : "^([.0-9]{1,25})$",
         "type" : "string"
      },
      "currency" : {
         "pattern" : "^(|[A-Z]{3})$",
         "type" : "string"
      },
      "loginid" : {
         "type" : "string",
         "pattern" : "^[A-Z]{2,4}[0-9]{1,10}$"
      },
      "account_id": {
          "type" :"string",
          "pattern" : "^[0-9]{1,10}$"
      }
   }
}
