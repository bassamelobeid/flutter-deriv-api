{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "login_history": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "time": {
                    "type": "integer",
                    "required": "1"
                },
                "action": {
                    "type": "string",
                    "required": "1"
                },
                "environment": {
                    "type":"string",
                    "required": "1"
                },
                "status": {
                    "type": "integer",
                    "pattern": "^0$",
                    "required": "1"
                }
            }
        },
        "required": "1"
    }
}
