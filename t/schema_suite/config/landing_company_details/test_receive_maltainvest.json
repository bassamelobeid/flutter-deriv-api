{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "legal_default_currency",
      "shortcode",
      "address",
      "legal_allowed_markets",
      "country",
      "stash",
      "legal_allowed_currencies",
      "name",
      "has_reality_check",
      "legal_allowed_contract_categories",
      "changeable_fields",
      "currency_config",
      "requirements"
   ],
   "additionalProperties" : false,
   "title" : null,
   "type" : "object",
   "description" : null,
   "properties" : {
      "currency_config" : {
         "properties" : {
            "forex" : {
               "patternProperties" : {
                  "^[a-zA-Z0-9]{2,20}$" : {
                     "additionalProperties" : false,
                     "type" : "object",
                     "required" : [
                        "max_payout",
                        "min_stake"
                     ],
                     "properties" : {
                        "max_payout" : {
                           "type" : "number",
                           "minimum" : 0
                        },
                        "min_stake" : {
                           "type" : "number",
                           "minimum" : 0,
                           "maximum" : 10
                        }
                     }
                  }
               },
               "properties" : {},
               "additionalProperties" : false,
               "type" : "object"
            }
         },
         "required" : [
            "forex"
         ],
         "type" : "object",
         "additionalProperties" : false
      },
      "country" : {
         "type" : "string",
         "pattern" : "^Malta$"
      },
      "legal_allowed_currencies" : {
         "type" : "array",
         "items" : {
            "pattern" : "^(USD|EUR|GBP)$",
            "type" : "string"
         },
         "minItems" : 3
      },
      "legal_allowed_markets" : {
         "type" : "array",
         "items" : {
            "pattern" : "^forex$",
            "type" : "string"
         },
         "minItems" : 1
      },
      "name" : {
         "pattern" : "^Deriv Investments \\(Europe\\) Limited$",
         "type" : "string"
      },
      "address" : {
         "type" : "array",
         "items" : {
            "type" : "string"
         }
      },
      "legal_default_currency" : {
         "type" : "string",
         "pattern" : "^EUR$"
      },
      "shortcode" : {
         "type" : "string",
         "pattern" : "^[_1]$"
      },
      "requirements" : {
         "type" : "object",
         "additionalProperties" : false,
         "required" : [
            "signup"
         ],
         "properties" : {
            "signup" : {
               "type" : "array",
               "items" : {
                  "type" : "string"
               }
            }
         }
      },
      "legal_allowed_contract_categories" : {
         "items" : {
            "type" : "string",
            "pattern" : "^multiplier$"
         },
         "type" : "array",
         "minItems" : 1
      },
      "has_reality_check" : {
         "type" : "integer",
         "enum" : [
            0
         ]
      },
      "stash" : {
         "type" : "object"
      },
      "changeable_fields" : {
         "additionalProperties" : false,
         "type" : "object",
         "patternProperties" : {
            "^.+$" : {
               "type" : "array",
               "items" : {
                  "type" : "string"
               }
            }
         },
         "properties" : {}
      }
   }
}
