{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "shortcode": {
            "type": "string",
            "pattern": "^[_1]$",
            "required": "1"
        },
        "name": {
            "type": "string",
            "pattern": "^Binary \\(Europe\\) Ltd$",
            "required": "1"
        },
        "address": {
            "type": "array",
            "required": "1",
            "items": {
                "type": "string"
            }
        },
        "country": {
            "type": "string",
            "pattern": "^Malta$",
            "required": "1"
        },
        "legal_default_currency": {
            "type": "string",
            "pattern": "^EUR$",
            "required": "1"
        },
        "legal_allowed_currencies": {
            "type": "array",
            "minItems": 3,
            "required": "1",
            "items": {
                "type": "string",
                "pattern": "^(USD|EUR|GBP)$",
                "required": "1"
            }
        },
        "legal_allowed_markets": {
            "type": "array",
            "minItems": 1,
            "required": "1",
            "items": {
                "type": "string",
                "pattern": "^(volidx)$",
                "required": "1"
            }
        },
        "legal_allowed_contract_categories": {
            "type": "array",
            "minItems": 7,
            "required": "1",
            "items": {
                "type": "string",
                "pattern": "^(asian|callput|digits|endsinout|staysinout|touchnotouch)$",
                "required": "1"
            }
        },
        "has_reality_check": {
            "type": "integer",
            "pattern": "^1$",
            "required": "1"
        }
    }
}
