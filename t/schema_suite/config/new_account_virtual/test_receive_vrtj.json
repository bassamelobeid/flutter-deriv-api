{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "client_id": {
            "type": "string",
            "pattern": "^VRTJ\\d+$",
            "required": "1"
        },
        "email": {
            "type": "string",
            "pattern": "^[_3]$",
            "required": "1"
        },
        "currency": {
            "type": "string",
            "pattern": "^JPY$",
            "required": "1"
        },
        "balance": {
            "type": "number",
            "pattern": "^1000000$",
            "required": "1"
        },
        "oauth_token": {
            "type": "string",
            "required": "1"
        }
    }
}
