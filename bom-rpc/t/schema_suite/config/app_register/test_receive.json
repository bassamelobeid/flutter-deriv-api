{
   "$schema" : "http://json-schema.org/draft-04/schema#",
   "required" : [
      "redirect_uri",
      "googleplay",
      "github",
      "verification_uri",
      "app_id",
      "appstore",
      "name",
      "app_markup_percentage",
      "scopes",
      "homepage",
      "active",
      "stash"
   ],
   "additionalProperties" : false,
   "title" : "Application object",
   "description" : null,
   "type" : "object",
   "properties" : {
      "homepage" : {
         "type" : "string",
         "pattern" : "^https://test\\.example\\.com/$"
      },
      "github" : {
         "type" : "string",
         "pattern" : "^https://github\\.com/test_org/app$"
      },
      "name" : {
         "type" : "string",
         "pattern" : "^Test Application$"
      },
      "app_markup_percentage" : {
         "type" : "string",
         "pattern" : "^1.5$"
      },
      "appstore" : {
         "pattern" : "^https://itunes\\.apple\\.com/test_app$",
         "type" : "string"
      },
      "active" : {
         "enum" : [
            1
         ],
         "type" : "integer"
      },
      "redirect_uri" : {
         "pattern" : "^https://test\\.example\\.com/redirect$",
         "type" : "string"
      },
      "verification_uri" : {
         "type" : "string",
         "pattern" : "^https://test\\.example\\.com/verify"
      },
      "googleplay" : {
         "type" : "string",
         "pattern" : "^https://play\\.google\\.com/store/apps/details\\?id=x\\.y\\.z$"
      },
      "app_id" : {
         "pattern" : "^\\d+$",
         "type" : "string"
      },
      "scopes" : {
         "type" : "array",
         "items" : {
            "type" : "string",
            "pattern" : "^(read|trade|payments|admin)$"
         }
      },
      "stash" : {
         "type" : "object"
      }
   }
}
